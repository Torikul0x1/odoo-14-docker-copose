<!-- security/payment_certificate_rules.xml -->
<odoo>
    <data noupdate="1">

        <record id="payment_certificate_company_rule" model="ir.rule">
            <field name="name">Payment Certificate: Company Rule</field>
            <field name="model_id" ref="model_payment_certificate"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>
