<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_form_view_inherit_alhilal" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit.alhilal</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
	            <!--ADD PSF IN INVOICE_LINE_IDS-->
	            <xpath expr="//notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree" position="inside">
		            <field name="psf" optional="hide"/>
	            </xpath>
	            
                <!-- Modify the label for the ref field -->
                <xpath expr="//group[@name='sale_info_group']/label[@for='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="action_create_payment_certificate" type="object" string="Create Payment Certificate"/>
                </xpath>

                <!-- Modify the field named ref -->
                <xpath expr="//group[@name='sale_info_group']/label[@for='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="psf" invisible="1"/>
                </xpath>

                <xpath expr="//group/group[2]" position="inside">
                    <field name="ref" string="Invoice Reference"/>
                    <field name="currency_id" string="Invoice Currency"/>
                </xpath>

                <xpath expr="//field[@name='subject']" position="replace">
                    <label for="supply_date_start" string="Supply Date"/>
                    <div class="d-flex">
                        <field name="supply_date_start" force_save="1" placeholder="Start Date"/>
                        <span class="o_form_label mx-3 oe_edit_only">
                            to
                        </span>
                        <field name="supply_date_end" placeholder="End Date"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="account_move_form_view_inherit_v1_alhilal" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit.v1.alhilal</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="professional_templates_v1.account_move_inherit"/>
            <field name="arch" type="xml">
                <field name="show_po_no" position="after">
                    <field name="is_show_receiver"/>
                </field>
            </field>
        </record>

        <record id="view_in_invoice_tree_view_inherit" model="ir.ui.view">
            <field name="name">view.in.invoice.tree.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_payment_certificate" type="object" string="Create Payment Certificate"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>