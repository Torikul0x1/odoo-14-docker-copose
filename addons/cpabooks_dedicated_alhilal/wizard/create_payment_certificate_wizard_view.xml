<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="payment_certificate_wizard_form_view" model="ir.ui.view">
            <field name="name">payment.certificate.wizard.form.view</field>
            <field name="model">payment.certificate.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="journal_id"/>
                                <field name="cheque_no"/>
                                <field name="cheque_date"/>
                                <field name="client_bank"/>
                            </group>

                            <group>
                                <field name="payment_date"/>
                                <!-- Here, add the widget="many2many_tags" to enable the tags widget -->
                                <field name="invoice_ids" widget="many2many_tags"/>
                                <field name="memo"/>
                            </group>
                            <field name="narration"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Proceed" class="oe_highlight" type="object"
                                name="action_create_payment_certificate"/>
                        <button special="cancel" string="Cancel" class="btn btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payment_certificate_wizard" model="ir.actions.act_window">
            <field name="name">Create Payment Certificate</field>
            <field name="res_model">payment.certificate.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
