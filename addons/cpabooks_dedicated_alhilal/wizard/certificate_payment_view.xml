<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--CERTIFICATE PAYMENT FROM VIEW-->
		<record id="certificate_payment_wizard_form" model="ir.ui.view">
			<field name="name">certificate.payment.wizard.form.view</field>
			<field name="model">certificate.payment.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<group>
							<field name="certificate_id" readonly="1"/>
							<field name="journal_id" widget="selection"/>
							<field name="cheque_no"/>
							<field name="cheque_date"/>
						</group>
						<group>
							<label for="amount"/>
							<div name="amount_div" class="o_row">
								<field name="amount"/>
								<field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
							</div>
							<field name="payment_date"/>
							<field name="narration"/>
						</group>
					</group>
					<footer>
						<button name="action_process" type="object" string="Process" class="oe_highlight"/>
						<button special="cancel" string="Cancel" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>
		
		<!--ACTION FRO CERTIFICATE PAYMENT-->
		<record id="action_certificate_payment" model="ir.actions.act_window">
			<field name="name">Register Payment</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">certificate.payment.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>