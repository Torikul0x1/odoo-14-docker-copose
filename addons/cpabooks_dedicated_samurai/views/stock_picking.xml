<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="action_recipe_mrp_production" model="ir.actions.report">
            <field name="name">Production Recipe</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">cpabooks_dedicated_samurai.production_recipe_structure</field>
            <field name="report_file">cpabooks_dedicated_samurai.production_recipe_structure</field>
            <field name="print_report_name">'Production Recipe - %s ' % object.name</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>
    <record id="inherit_picking_form_for_mo" model="ir.ui.view">
        <field name="name">inherit.picking.form.for.mo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='lot_ids']" position="after">
                <field name="mo_id" optional="hide" readonly="1" force_save="1"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(cpabooks_dedicated_samurai.action_recipe_mrp_production)d" type="action"
                        class="oe_stat_button" icon="fa-dollar" string="Production Recipe" attrs="{'invisible': [('picking_type_code','!=','outgoing')]}">
                    </button>
            </xpath>
        </field>
    </record>


</odoo>