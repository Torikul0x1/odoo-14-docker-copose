<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="job_estimation_report_template_common">
            <t t-call="web.external_layout">
                <div class="page border">
                    <style>
                        th{
                        text-align:center; !important;
                        }
                    </style>
                    <t t-foreach="docs" t-as="o">
                        <div t-attf-style="color:#654321" class="row mt-0">
                            <h2 style="text-decoration:underline;" class="col-12 text-center">Job Estimate
                            </h2>
                        </div>

                        <div class="container-fluid mt-5 d-flex p-0">

                            <div t-attf-style="border:1px solid #3262a8;color:#093671;font-size:14px;font-family:sans-serif;"
                                 class="w-50 p-3">
                                <div t-attf-style="display:inline;width:auto; color:#654321;font-size:16px;font-weight:bold;">
                                    <span>
                                        <span class="fa fa-file-text-o"/>
                                        Customer:
                                    </span>
                                </div>
                                <div name="partner_name" style="padding-left:3px;">
                                    <span class="fa fa-user "/>

                                    <span t-field="o.partner_id.name"
                                          t-attf-style="font-weight:bold !important;text-transform: uppercase !important;"/>

                                </div>
                                <address t-field="o.partner_id" style="margin-bottom:0px;"
                                         t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"], "no_marker": false}'/>

                            </div>

                            <div t-attf-style="background-color:#3262a8;border:1px solid black; color:#C0C0C0;font-size:16px;font-family:sans-serif;"
                                 class="w-50 p-3">
                                <div t-if="o.name">
                                    <strong>Estimate No:</strong>
                                    <span t-field="o.name"/>
                                </div>
                                <div t-if="o.date">
                                    <strong>Date Of Estimate:</strong>
                                    <span t-field="o.date"/>
                                </div>
                                <div t-if="o.customer_ref">
                                    <strong>Customer Reference:</strong>
                                    <span t-field="o.customer_ref"/>
                                </div>
                                <div t-if="o.payment_term_id">
                                    <strong>Payment Terms:</strong>
                                    <span t-field="o.payment_term_id"/>
                                </div>
                                <div t-if="o.sales_person_id">
                                    <strong>Sales Person:</strong>
                                    <span t-field="o.sales_person_id"/>
                                </div>
                                <div t-if="o.sales_team_id">
                                    <strong>Sales Team:</strong>
                                    <span t-field="o.sales_team_id"/>
                                </div>
                            </div>
                        </div>


                        <t t-if="o.material_estimation_ids">
                            <h4 class="mt-5">Material Estimate</h4>
                            <table t-attf-class="table  table-sm" t-attf-style="color:#093671;">
                                <thead>
                                    <tr t-attf-style="background-color:#3262a8;font-size:16px;">
                                        <th width="20%" t-attf-style="color:#C0C0C0;">Product Name
                                        </th>
                                        <th width="21%" t-attf-style="color:#C0C0C0;">Description</th>
                                        <th width="10%" t-attf-style="color:#C0C0C0;">QTY</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">UOM</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Rate</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Disc.</th>
                                        <th width="13%" t-attf-style="color:#C0C0C0;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody t-attf-style="color:#093671;">
                                    <t t-foreach="o.material_estimation_ids" t-as="line">
                                        <tr t-attf-style="border-bottom: 1px solid #000;">
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.description"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.quantity)"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.uom_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.discount)"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.subtotal)"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <t t-if="o.labour_estimation_ids">
                            <h4 class="mt-5">Labour Estimate</h4>
                            <table t-attf-class="table  table-sm" t-attf-style="color:#093671;">
                                <thead t-attf-style="color:#C0C0C0;">
                                    <tr t-attf-style="background-color:#3262a8;font-size:16px;">
                                        <th width="20%" t-attf-style="color:#C0C0C0;">Product Name
                                        </th>
                                        <th width="21%" t-attf-style="color:#C0C0C0;">Description</th>
                                        <th width="10%" t-attf-style="color:#C0C0C0;">QTY</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">UOM</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Rate</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Hours</th>
                                        <!--                                        <th t-attf-style="color:#C0C0C0;">Disc.</th>-->
                                        <th width="13%" t-attf-style="color:#C0C0C0;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody t-attf-style="color:#093671;">
                                    <t t-foreach="o.labour_estimation_ids" t-as="line">
                                        <tr t-attf-style="border-bottom: 1px solid #000;">
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.description"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.quantity)"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.uom_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.hours" widget="float_time"/>
                                            </td>
                                            <!--                                            <td>-->
                                            <!--                                                <span t-field="line.discount"/>-->
                                            <!--                                            </td>-->
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.subtotal)"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <t t-if="o.overhead_estimation_ids">
                            <h4 class="mt-5">Overhead Estimate</h4>
                            <table t-attf-class="table  table-sm" t-attf-style="color:#093671;">
                                <thead t-attf-style="color:#C0C0C0;">
                                    <tr t-attf-style="background-color:#3262a8;font-size:16px;">
                                        <th width="20%" t-attf-style="color:#C0C0C0;">Product Name
                                        </th>
                                        <th width="21%" t-attf-style="color:#C0C0C0;">Description</th>
                                        <th width="10%" t-attf-style="color:#C0C0C0;">QTY</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">UOM</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Rate</th>
                                        <th width="12%" t-attf-style="color:#C0C0C0;">Disc.</th>
                                        <th width="13%" t-attf-style="color:#C0C0C0;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody t-attf-style="color:#093671;">
                                    <t t-foreach="o.overhead_estimation_ids" t-as="line">
                                        <tr t-attf-style="border-bottom: 1px solid #000;">
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.description"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.quantity)"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.uom_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.discount)"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,.2f}'.format(line.subtotal)"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>


                        <div class="row" style="page-break-inside: avoid;">
                            <div class="col-8 float-left">
                                <div class="w-100" t-if="o.description">
                                    <strong>Description Of Job Estimate</strong>
                                    <p>
                                        <span t-field="o.description"/>
                                    </p>
                                </div>
                            </div>
                            <div class="col-4 float-right">
                                <table class="table table-sm">
                                    <tr t-attf-style="background-color:#3262a8;" class="border-black"
                                        t-if="o.total_material_estimate">
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;">
                                            <strong>Total Material Estimate</strong>
                                        </td>
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;"
                                            class="text-right">
                                            <span t-esc="'{:,.2f}'.format(o.total_material_estimate)"/>
                                        </td>
                                    </tr>
                                    <tr t-attf-style="background-color:#3262a8;" class="border-black"
                                        t-if="o.total_labour_estimate">
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;">
                                            <strong>Total Labour Estimate</strong>
                                        </td>
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;"
                                            class="text-right">
                                            <span t-esc="'{:,.2f}'.format(o.total_labour_estimate)"/>
                                        </td>
                                    </tr>
                                    <tr t-attf-style="background-color:#3262a8;" class="border-black"
                                        t-if="o.total_overhead_estimate">
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;">
                                            <strong>Total Overhead Estimate</strong>
                                        </td>
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;"
                                            class="text-right">
                                            <span t-esc="'{:,.2f}'.format(o.total_overhead_estimate)"/>
                                        </td>
                                    </tr>
                                    <tr t-attf-style="background-color:#3262a8;" class="border-black">
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;">
                                            <strong>Total Job Estimate</strong>
                                        </td>
                                        <td t-attf-style="color:#C0C0C0 !important;background-color:#3262a8;"
                                            class="text-right">
                                            <span t-esc="'{:,.2f}'.format(o.total_job_estimate)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </t>
                </div>
            </t>
        </template>

        <template id="ESTIMATION_common_document" name="Estimation Common Template">
            <t t-call="web.html_container">
                <t t-foreach="doc_ids" t-as="o">
                    <t t-call="cost_estimate_customer_ld.job_estimation_report_template_common"/>
                </t>
            </t>
        </template>


