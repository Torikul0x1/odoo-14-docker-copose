<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="job_estimate_form_view" model="ir.ui.view">
            <field name="name">job.estimate.form.view</field>
            <field name="model">job.estimate</field>
            <field name="arch" type="xml">
                <form string="Job Estimate">
                    <header>
                        <button name="action_job_confirm" string="Confirm" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_send_quotation" string="Send by Email" type="object"
                                attrs="{'invisible': ['|',('state', '=', 'cancel'),('estimate_sent', '=', True)]}"
                                class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                attrs="{'invisible': [('state', 'in', ['confirmed','approved','done','cancel'])]}"/>
                        <button name="action_set_to_draft" type="object" string="Reset To Draft"
                                attrs="{'invisible': [('state', '!=', 'approved')]}"
                                class="btn-primary"/>
                        <button name="action_approve" type="object" string="Approve"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"
                                class="btn-primary"/>
                        <button name="action_reject" type="object" string="Reject"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"
                                class="btn-primary"/>
                        <button name="action_create_quotation" type="object" string="Create Quotation"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done"/>
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_quotations" class="oe_stat_button" icon="fa-truck"
                                    attrs="{'invisible': [('internal_quotation_count', '=', 0)]}">
                                <field name="internal_quotation_count" widget="statinfo" string="Quotation"/>
                            </button>
                        </div>

                        <div class="oe_title oe_left">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="payment_term_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="analytic_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="user_id" invisible='1'/>
                                <field name="estimate_sent" invisible='1'/>


                            </group>
                            <group>
                                <field name="customer_ref" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="project_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="date" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="company_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="currency_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="job_type_id" widget="many2many_tags"
                                       attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="style"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="create_product_variant_id"/>
                            </group>
                            <group></group>
                        </group>
                        <notebook>
<!--                            <page string="Material Estimation Form">-->
                            <page string="Material Cost">
                                <field name="material_estimation_ids"
                                       attrs="{'readonly': [('state', '=', 'done')]}">
                                    <tree string="Estimate Materials" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="type"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="description"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="subtotal" widget="monetary"/>
                                    </tree>
                                </field>
                            </page>
<!--                            <page string="Labour Estimation Form">-->
                            <page string="Labour Cost">
                                <field name="labour_estimation_ids"
                                       attrs="{'readonly': [('state', '=', 'done')]}">
                                    <tree string="Labour Estimation" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="type"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="description"/>
                                        <field name="hours" widget="float_time"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="subtotal" widget="monetary"/>
                                    </tree>
                                </field>
                            </page>
<!--                            <page string="Overhead Estimation">-->
                            <page string="Overhead Cost">
                                <field name="overhead_estimation_ids"
                                       attrs="{'readonly': [('state', '=', 'done')]}">
                                    <tree string="Overhead Estimation" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="type"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="description"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="subtotal" widget="monetary"/>
                                    </tree>
                                </field>

                            </page>
                            <page string="Miscellaneous">
                                <group name="container_row_2">
                                    <group>
                                        <field name="sales_person_id"
                                               attrs="{'readonly': [('state', '=', 'done')]}"/>
                                    </group>
                                    <group>
                                        <field name="sales_team_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                        <field name="sale_quotation_id" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <group class="oe_subtotal_footer oe_right" colspan="3">
                            <field name="total_material_estimate" widget="monetary"/>
<!--                            <field name="final_material_estimate" widget="monetary"/>-->
                            <field name="total_labour_estimate" widget="monetary"/>
                            <field name="total_overhead_estimate" widget="monetary"/>
                            <field name="profit_percent"/>
                            <field name="total_job_estimate" widget="monetary"/>
                        </group>
                        <separator string="Job Estimation Overview"/>
                        <field name="description" class="oe_inline" attrs="{'readonly': [('state', '=', 'done')]}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="job_estimate_tree_view" model="ir.ui.view">
            <field name="name">job.estimate.tree.view</field>
            <field name="model">job.estimate</field>
            <field name="arch" type="xml">
                <tree string="Job Estimates">
                    <field name="partner_id"/>
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="total_material_estimate"/>
                    <field name="total_labour_estimate"/>
                    <field name="total_overhead_estimate"/>
                    <field name="total_job_estimate"/>
                    <field name="sales_person_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_job_estimate" model="ir.actions.act_window">
            <field name="name">Job Estimates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">job.estimate</field>
            <!--            Uncomment view_type below v14-->
            <!--            <field name="view_type">form</field>-->
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_job_estimate"
                  name="Job Estimates"
                  parent="sale.sale_order_menu"
                  action="action_job_estimate"
                  sequence="10"/>

        <menuitem
            id="menu_job_estimate_main"
            name="Job Estimates"
            web_icon="cost_estimate_customer_ld,static/description/icon.png"
            action="action_job_estimate"
            sequence="5"/>

    </data>
</odoo>
