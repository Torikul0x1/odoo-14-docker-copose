<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_uom_quotation_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="td_quantity" class="text-right">
                <span t-field="line.product_uom_qty"/>
                <span t-field="line.product_uom"/>
                <br/>
                <span>
                    (<span t-esc="line.product_uom_qty*line.product_uom.counted_qty"/>
                    <span t-field="line.product_uom.another_uom"/>)
                </span>
            </td>
        </xpath>
    </template>
</odoo>
