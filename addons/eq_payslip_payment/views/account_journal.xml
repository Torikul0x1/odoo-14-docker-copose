<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="account_journal_debit_credit_account" model="ir.ui.view">
        <field name="name">Account debit credit account</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_control_ids']" position="after">
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <newline/>
            </xpath>
        </field>
    </record>

</odoo>