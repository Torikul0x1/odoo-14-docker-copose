<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="helpdesk_description_line" model="ir.ui.view">
            <field name="name">helpdesk.description.line</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="description_lines">
                        <tree editable="bottom">
                            <field name="sr_no" readonly="1" style="width:30px;"/>
                            <field name="description_line" required="1"/>
                            <field name="is_create_task" nolabel="1"/>
                            <field name="ticket_subtask_id"/>
                            <field name="deadline"/>
                            <field name="stage_id"/>
                            <field name="description_line_2"/>
                            <field name="description_line_3"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>