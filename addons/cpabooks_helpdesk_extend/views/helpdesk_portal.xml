<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="custom_portal_helpdesk_ticket" inherit_id="helpdesk.portal_helpdesk_ticket" name="Custom Helpdesk Ticket">
<!--            <xpath expr="//th[span[@t-field='ticket.name']]" position="after">-->
<!--                <th>Customer Cont. Name</th>-->
<!--            </xpath>-->

            <xpath expr="//t[@t-call='portal.portal_layout']/t[@t-else='']/t[@t-call='portal.portal_table']/t/thead/tr/th[1]" position="after">
                <th>Sequence</th>
            </xpath>
            <xpath expr="//t[@t-call='portal.portal_layout']/t[@t-else='']/t[@t-call='portal.portal_table']/t/t/tr/td[1]" position="after">
                <td class="text-left"><a t-attf-href="/helpdesk/ticket/#{ticket.id}"><t t-esc="ticket.sequence_no"/></a></td>
            </xpath>
        </template>
    </data>
</odoo>

