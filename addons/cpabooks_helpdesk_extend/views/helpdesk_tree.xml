<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="helpdesk_tree_view_inherit" model="ir.ui.view">
            <field name="name">helpdesk.tree.view.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='display_name']" position="after">-->
<!--                </xpath>-->
                <xpath expr="//field[@name='display_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree" position="inside">
                    <header>
                        <button name="wrap_view" type="object" string="Wrap View" class="o_highlight" invisible="0"/>
                        <button name="list_view" type="object" string="List View" class="o_highlight" invisible="0"/>
                        <button name="set_to_draft" type="object" string="Return To draft" class="o_highlight" invisible="0"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>