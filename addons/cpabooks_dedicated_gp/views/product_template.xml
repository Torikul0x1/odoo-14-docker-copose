<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_inherit_gp" model="ir.ui.view">
        <field name="name">product.template.form.inherit.gp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <label class="oe_edit_only" for="prod_description" string="Product Description"/>
                <h1><field name="prod_description" placeholder="Product Description"/></h1>
                <label class="oe_edit_only" for="prod_inspiration" string="Product Inspiration"/>
                <h1><field name="prod_inspiration" placeholder="Product Inspiration"/></h1>
            </xpath>
            <xpath expr="//page[@name='general_information']/group[1]/group[@name='group_standard_price']" position="inside">
                <field name="product_class" invisible="1"/>
            </xpath>

        </field>
    </record>

     <record model="ir.ui.view" id="description_inspiration_product_search_inherit">
            <field name="name">product.template.search.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//search/field[@name='name']" position="after">

                    <field name="prod_description" string="Product Description"/>
                    <field name="prod_inspiration" string="Product Inspiration"/>


                </xpath>
<!--                <xpath expr="//search" position="inside">-->
<!--                    <filter string="Item Code" name="item_code"/>-->

<!--                    <field name="default_code" string="Part Number" />-->
<!--                </xpath>-->

            </field>
        </record>


     <record model="ir.ui.view" id="description_inspiration_product_tree_inherit">
            <field name="name">product.template.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="prod_description" string="Product Description" optional="hide"/>
                    <field name="prod_inspiration" string="Product Inspiration" optional="hide"/>
                </xpath>
            </field>
        </record>

     <record model="ir.ui.view" id="description_inspiration_product_template_tree_inherit">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="prod_description" string="Product Description" optional="hide"/>
                    <field name="prod_inspiration" string="Product Inspiration" optional="hide"/>
                </xpath>
            </field>
        </record>


</odoo>
