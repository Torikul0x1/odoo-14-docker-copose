<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_inherit_from_cost_estimation" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit.from.cost.estimation</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="bom_product_id"/>
            </xpath>

            <xpath expr="//page[@name='miscellaneous']" position="after">
                <page name="final_product" string="Final Products">
                <field name="final_product_ids">
                    <tree editable="bottom">
                        <field name="final_product_id"/>
                        <field name="quantity"/>
                    </tree>
                </field>
                </page>
            </xpath>
            <field name="product_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="product_tmpl_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="mrp_bom_tree_view_tree_inherit_from_cost_estimation" model="ir.ui.view">
        <field name="name">mrp.bom.tree.inherit.from.cost.estimation</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="product_tmpl_id" position="before">
                <field name="name"/>
            </field>
        </field>
    </record>
<!--    #from switchgear-->
     <record id="mrp_bom_form_view_inherit_from_switchgear" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit.from.switchgear</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="cpabooks_switchgear_custom.mrp_bom_form_view_inherit_switchgear_custom"/>
        <field name="arch" type="xml">
            <field name="project_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
     </record>

     <record id="mrp_bom_form_view_inherit_sequence" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.sequence</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="cpabooks_sequences.mrp_bom_form_view_inherit_switchgear_custom"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_title">
                    <label for="bom_name" class="oe_edit_only"/>
                    <h1>
                        <field name="bom_name"/>
                    </h1>
                </div>
            </xpath>
        </field>
    </record>
</odoo>