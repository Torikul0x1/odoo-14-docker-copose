<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_month_wizard_form" model="ir.ui.view">
        <field name="name">project.month.wizard.form</field>
        <field name="model">project.month.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Project and Date">
                <group>
                    <field name="project_id"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="company_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_genarate_report" class="btn-primary"/>
<!--                    <button string="Cancel" class="btn-secondary" special="cancel"/>-->
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_month_wizard" model="ir.actions.act_window">
        <field name="name">Project Wise Timesheet Report</field>
        <field name="res_model">project.month.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_project_month_wizard_form"/>
        <field name="target">new</field>
    </record>

     <menuitem action="action_project_month_wizard"
        id="menu_project_month_wizard"
        parent="hr_timesheet.menu_timesheets_reports"/>
</odoo>
