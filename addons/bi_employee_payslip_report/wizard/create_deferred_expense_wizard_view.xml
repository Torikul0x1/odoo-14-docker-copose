<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="create_deferred_expense_wizard_form_view" model="ir.ui.view">
            <field name="name">create.deferred.expense.wizard.form.view</field>
            <field name="model">create.deferred.expense.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <field name="name" class="oe_inline"/>
                    </div>
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_create_deferred_expense" class="oe_highlight"
                                string="Create MEJ"
                                type="object"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_deferred_expense_wizard" model="ir.actions.act_window">
            <field name="name">Create Deferred Expenses</field>
            <field name="res_model">create.deferred.expense.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
