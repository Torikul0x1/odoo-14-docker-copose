<odoo>


    <record id="hr_contract_view_form_extend" model="ir.ui.view">
        <field name="name">hr.contract.extend.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
              <xpath expr="//field[@name='structure_type_id']" position="after">
                    <field name="weekend_day" options="{'no_create': True, 'no_open': True}" widget="many2many_tags"/>
                    <field name="half_day" options="{'no_create': True, 'no_open': True}" widget="many2many_tags"/>
                    <field name="half_day_working_hour" widget="float_time"/>
              </xpath>

        </field>
    </record>

