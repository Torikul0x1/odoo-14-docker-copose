<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_timesheet_template_apply_tree" model="ir.ui.view">
            <field name="name">timesheet.template.apply.tree</field>
            <field name="model">timesheet.template.apply</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Template Apply" multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="task_id" invisible="1"/>
                    <field name="state"/>
                    <field name="company_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                </tree>
            </field>
        </record>

    <record id="view_timesheet_template_apply_form" model="ir.ui.view">
            <field name="name">timesheet.template.apply.form</field>
            <field name="model">timesheet.template.apply</field>
            <field name="arch" type="xml">
              <form string="Timesheet Template Apply">
                   <header>
                        <button name="add_into_timesheet" type="object"
                            string="Add Into Timesheet" class="oe_highlight" attrs="{'invisible':[('state','=','added')]}"/>

                       <field name="state" widget="statusbar" statusbar_visible="draft,added"/>
                   </header>
                  <sheet>
                      <div class="oe_title">
<!--                        <label for="name" class="oe_edit_only"/>-->
                        <h1>
                            <field name="name" required="1" attrs="{'readonly':[(('state','=','added'))]}"/>
                        </h1>
                    </div>
                      <group>
                            <field name="template_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" attrs="{'readonly':[(('state','=','added'))]}"/>
                            <field name="apply_date" attrs="{'readonly':[(('state','=','added'))]}"/>
                            <field name="project_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="task_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" invisible="1"/>
                            <field name="company_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" readonly="1" force_save="1"/>
                      </group>
                       <notebook>
                        <page string="Assign Employee" name="timesheet_template_apply_lines">
                            <field name="timesheet_apply_line" attrs="{'readonly':[(('state','=','added'))]}">
                                <tree string="Timesheet Template Apply Lines"  editable="bottom">
                                    <field name="employee_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                     <field name="project" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" invisible="1"/>
                                    <field name="task" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="description"/>
                                    <field name="unit_amount" widget="time"/>
                                </tree>
                            </field>
                        </page>
                       </notebook>
                  </sheet>
              </form>
            </field>
            </record>

    <record id="action_timesheet_template_apply" model="ir.actions.act_window">
            <field name="name">Timesheet Template Apply</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">timesheet.template.apply</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Applied timesheet template for employee day to day timesheet!
                </p>
            </field>
    </record>

