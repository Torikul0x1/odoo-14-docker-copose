<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_salary_code_setup_tree" model="ir.ui.view">
        <field name="name">view.salary.code.setup.tree</field>
        <field name="model">salary.code.setup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="salary_structure"/>
<!--                <field name="company_id"/>-->
            </tree>
        </field>
    </record>

    <record id="view_salary_code_setup_form" model="ir.ui.view">
        <field name="name">view.salary.code.setup.form</field>
        <field name="model">salary.code.setup</field>
        <field name="arch" type="xml">
            <form create="0">

                <sheet>
                    <group>
                        <group>
                            <field name="salary_structure" options="{'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <button name="setup_code" type="object" string="SETUP" class="btn btn-primary"/>
                        </group>
                        <group>
<!--                            <field name="company_id" invisible="1"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page name="Salary Python Code Setup" string="Rules">
                            <field name="code_line" >
                            <tree editable="bottom" delete="0" create="0">
                                <field name="existing_rule" readonly="1" force_save="1"/>
                                <field name="python_code" force_save="1"/>
                                <field name="propose_code"/>
                            </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="salary_code_setup_act" model="ir.actions.act_window">
        <field name="name">Salary Python Code Setup</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salary.code.setup</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
<!--        <field name="help" type="html">-->

<!--        </field>-->
    </record>





    <menuitem id="menu_salary_code_setup" parent="hr_payroll.menu_hr_salary_configuration" action="salary_code_setup_act" sequence="75"/>


</odoo>