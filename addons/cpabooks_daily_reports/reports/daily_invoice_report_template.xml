<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Report-->
        <template id="daily_invoice_report_template">
            <t t-call="web.html_container">
                <div >
                    <style>
                        .report-container {
                        width: 100%;
                        border-collapse: collapse;
                        margin: 20px 0;
                        font-size: 16px;
                        text-align: left;
                        }
                        .report-container thead tr {
                        background-color: #f2f2f2;
                        color: #333;
                        text-align: left;
                        font-weight: bold;
                        }
                        .report-container th, .report-container td {
                        border: 1px solid #ddd;
                        padding: 8px;
                        }
                        .report-container tbody tr:nth-child(even) {
                        background-color: #f9f9f9;
                        }
                        .report-container tbody tr:hover {
                        background-color: #f1f1f1;
                        }
                        .right-align {
                        text-align: right;
                        }
                        h1 {
                        width: 100%;
                        text-align: center;
                        border-bottom: 1px solid #000055;
                        padding-bottom: 10px;
                        }
                        p {
                        font-size: 14px;
                        margin-top: 10px;
                        }
                        .payment-diff, .sale-diff {
                        background-color:#ddd;
                        }
                        th{
                        width:14%;
                        }
                    </style>
                    <h1>
                        <t t-esc="company_id.name"/>
                    </h1>
                    <h1>
                        Daily Report
                    </h1>
                    <p t-if="report_title">
                        <t t-esc="report_title"/>
                    </p>
                    <table class="report-container">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th class="right-align">Sales</th>
                                <th class="right-align">Bills</th>
                                <th class="right-align">Sale Diff</th>
                                <th class="right-align">Cash Received</th>
                                <th class="right-align">Cash Payment</th>
                                <th class="right-align">Payment Diff</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="daily_totals" t-as="item">
                                <tr>
                                    <td>
                                        <t t-esc="item['date']"/>
                                    </td>
                                    <td class="right-align">
                                        <t t-if="item['invoices'] == '-'">
                                            <t t-esc="item['invoices']"/>
                                        </t>
                                        <t t-if="item['invoices'] != '-' and item['invoices'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['invoices'] != '-' and item['invoices'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['invoices'])"/>
                                        </t>
                                    </td> <!--end invoice-->
                                    <td class="right-align">
                                        <t t-if="item['bills'] == '-'">
                                            <t t-esc="item['bills']"/>
                                        </t>
                                        <t t-if="item['bills'] != '-' and item['bills'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['bills'] != '-' and item['bills'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['bills'])"/>
                                        </t>
                                    </td><!--end bills-->
                                    <td class="right-align sale-diff">
                                        <t t-if="item['sale_diff'] == '-'">
                                            <t t-esc="item['sale_diff']"/>
                                        </t>
                                        <t t-if="item['sale_diff'] != '-' and item['sale_diff'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['sale_diff'] != '-' and item['sale_diff'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['sale_diff'])"/>
                                        </t>
                                    </td><!--end sale diff-->
                                    <td class="right-align">
                                        <t t-if="item['cash_receipts'] == '-'">
                                            <t t-esc="item['cash_receipts']"/>
                                        </t>
                                        <t t-if="item['cash_receipts'] != '-' and item['cash_receipts'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['cash_receipts'] != '-' and item['cash_receipts'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['cash_receipts'])"/>
                                        </t>
                                    </td><!--cash receipts-->
                                    <td class="right-align">
                                        <t t-if="item['cash_payments'] == '-'">
                                            <t t-esc="item['cash_payments']"/>
                                        </t>
                                        <t t-if="item['cash_payments'] != '-' and item['cash_payments'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['cash_payments'] != '-' and item['cash_payments'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['cash_payments'])"/>
                                        </t>
                                    </td><!--end payments-->
                                    <td class="right-align payment-diff">
                                        <t t-if="item['payment_diff'] == '-'">
                                            <t t-esc="item['payment_diff']"/>
                                        </t>
                                        <t t-if="item['payment_diff'] != '-' and item['payment_diff'] == 0">
                                            -
                                        </t>
                                        <t t-if="item['payment_diff'] != '-' and item['payment_diff'] != 0">
                                            <t t-esc="'{0:,.2f}'.format(item['payment_diff'])"/>
                                        </t>
                                    </td><!--end payment diff-->
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>
