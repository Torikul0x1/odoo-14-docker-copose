<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//notebook/page[@name='other_information']/group[1]/group[@name='sale_info']/field[@name='invoice_status'][2]" position="after">-->
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="print_product_image" widget="boolean_toggle"/> <!-- attrs="{'invisible':[('move_type','!=','out_invoice')]}"-->
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="image_name" invisible="1" force_save="1"/>
                <field name="image" widget="image" filename="image_name" options='{"size": [120, 120]}' attrs="{'column_invisible':[('parent.move_type','!=','out_invoice')]}" force_save="1"/>
            </xpath>

<!--            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/field[@name='product_id']" position="after">-->
<!--                <field name="image_name" invisible="1"/>-->
<!--                <field name="image" widget="image" filename="image_name" options='{"size": [120, 120]}' attrs="{'column_invisible':[('parent.move_type','!=','out_invoice')]}"/>-->
<!--            </xpath>-->
             <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="image_name" invisible="1" force_save="1"/>
                <field name="image" widget="image" filename="image_name" options='{"size": [120, 120]}' attrs="{'column_invisible':[('parent.move_type','!=','out_invoice')]}" invisible="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>