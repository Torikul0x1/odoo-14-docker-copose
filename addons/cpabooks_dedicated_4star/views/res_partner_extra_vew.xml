<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--RES PARTNER EXTRA FORM VIEW-->
		<record id="view_res_partner_extra_form" model="ir.ui.view">
			<field name="name">view.res.partner.extra.form</field>
			<field name="model">res.partner.extra</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="action_save" type="object" string="Save" class="oe_highlight"/>
						<button special="cancel" string="Cancel"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="partner_name" readonly="1"/>
								<field name="partner_id" readonly="1" invisible="1"/>
								<field name="customer_code"/>
								<field name="is_hide_gen_method" invisible="1"/>
								<button name="action_generate_code" type="object" string="Generate Code" class="btn-sm text-primary fa fa-arrow-right"
								        attrs="{'invisible': [('is_hide_gen_method', '=', True)]}"/>
								
								<field name="whatsapp_number"/>
								<field name="care_of"/>
								<field name="payment_terms_id"/>
							</group>
							<group>
								<field name="address_line_1"/>
								<field name="address_line_2"/>
								<field name="territory"/>
							</group>
						</group>
						<footer/>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>