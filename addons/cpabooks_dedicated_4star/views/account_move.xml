<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="account_move_form_view_inherit" model="ir.ui.view">
			<field name="name">account.move.form.view.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="user_id" string="Care of" attrs="{'invisible': [('move_type', 'not in', ['in_invoice','out_invoice'])]}"/>
				</xpath>
				<xpath expr="//field[@name='invoice_date']" position="after">
					<field name="dot_matrix_tmpl_id"
					       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'in_invoice'])]}"/>
				</xpath>
<!--				<xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">-->
<!--					<attribute name="string">Payment Terms</attribute>-->
<!--				</xpath>-->
			</field>
		</record>
		
		<record id="professional_template_account_move_inherit" model="ir.ui.view">
			<field name="name">professional.template.account.move.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="professional_templates_v1.account_move_inherit"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='report_visibility']" position="inside">
					<field name="is_print_ageing"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>