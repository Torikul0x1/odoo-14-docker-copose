<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_line_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']"
                       position="before">
                    <field name="item_code" optional="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>