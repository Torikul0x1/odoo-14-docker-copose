<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- VIEW FOR SOA -->
    <record id="view_account_soa_form" model="ir.ui.view">
        <field name="name">account.soa.form</field>
        <field name="model">account.soa.report</field>
        <field name="arch" type="xml">
            <form string="Account SOA Report">
                <group>
                    <field name="date"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION FOR SOA -->
    <record id="action_account_soa_report" model="ir.actions.act_window">
        <field name="name">Account SOA Report</field>
        <field name="res_model">account.soa.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- MENU FOR SOA -->
    <menuitem id="menu_account_soa_root" name="SOA" parent="account.menu_finance_reports" sequence="10">
            <menuitem id="menu_account_soa_report" name="Account SOA Report" action="action_account_soa_report" sequence="1"/>
    </menuitem>
</odoo>