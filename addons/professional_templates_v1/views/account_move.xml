<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    
	    <!--ACCOUNT MOVE LIST VIEW INHERIT-->
	    <record id="account_move_list_view_inherit" model="ir.ui.view">
		    <field name="name">account.move.list.view.inherit</field>
		    <field name="model">account.move</field>
		    <field name="inherit_id" ref="account.view_in_invoice_tree"/>
		    <field name="arch" type="xml">
			    <xpath expr="//field[@name='invoice_date']" position="after">
				    <field name="date" string="Accounting Date" optional="show"/>
			    </xpath>
		    </field>
	    </record>
	    
	    <!--Invoice list view-->
	    <record id="account_move_out_invoice_list_view_inherit" model="ir.ui.view">
		    <field name="name">account.move.out.invoice.list.view.inherit</field>
		    <field name="model">account.move</field>
		    <field name="inherit_id" ref="account.view_out_invoice_tree"/>
		    <field name="arch" type="xml">
			    <xpath expr="//tree" position="inside">
				    <header>
					    <button name="action_compute_paid_amt" type="object" class="oe_highlight" string="Re-Compute"/>
				    </header>
			    </xpath>
			    <xpath expr="//field[@name='amount_residual']" position="before">
				    <field name="amount_paid" optional="show"/>
			    </xpath>
			    <xpath expr="//field[@name='invoice_date_due']" position="attributes">
				    <attribute name="optional">hide</attribute>
			    </xpath>
			    <xpath expr="//field[@name='activity_ids']" position="attributes">
				    <attribute name="optional">hide</attribute>
			    </xpath>
		    </field>
	    </record>
	    
        <record id="account_move_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!--invoice currency and previous balance-->
                <xpath expr="//group/group[2]" position="inside">
                    <field name="previous_balance" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_origin']" position="attributes">
	                <attribute name="attrs">{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}</attribute>
                </xpath>

                <xpath expr="//page[@id='other_tab']/group/group[1]/field[@name='invoice_user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group/group[2]" position="inside">
                    <field name="invoice_user_id" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"/>
                </xpath>

                <field name="partner_id" position="after">
                    <field name="delivery_address" attrs="{'invisible':[('show_delivery_address','=',False)]}"/>
                    <field name="delivery_person" attrs="{'invisible':[('show_delivery_address','=',False)]}"/>
                    <field name="delivery_date" attrs="{'invisible':[('show_delivery_address','=',False)]}"/>
                </field>

                <xpath expr="//field[@name = 'invoice_vendor_bill_id']" position="after">
                    <field name="show_project" invisible="1"/>
                    <field name="project_id" attrs="{'invisible':[('show_project','=',False)]}"/>
                    <!--                    <field name="po_no" widget='many2many_tags' attrs="{'invisible':[('show_po_no','=',False)]}"/>-->
                    <field name="lpo_no" attrs="{'invisible':['|', ('show_po_no','=',False), ('move_type', 'not in', ['in_invoice','out_invoice'])]}"/>
                    <field name="do_no" attrs="{'invisible':['|',('show_do_no','=',False), ('move_type', 'not in', ['in_invoice','out_invoice'])]}"/>
                    <!--                    <field name="job_no" attrs="{'invisible':[('show_job_no','=',False)]}"/>-->
                    <field name="show_subject" invisible="1"/>
                    <field name="subject" attrs="{'invisible':[('show_subject','=',False)]}"/>
                    <field name="payment_mode" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"/>
                    <field name="delivery_mode" attrs="{'invisible':[('show_delivery_address','=',False)]}"/>
                </xpath>

                <xpath expr="//page[@id='other_tab']/group[@id='other_tab_group']" position="after">

                    <group id="report_visibility_group">
                        <group string="Report Visibility" name="report_visibility">
                            <field name="show_title"/>
                            <field name="show_trn"/>
                            <field name="show_theme_color"/>
                            <field name="show_due_date"/>
                            <field name="show_sales_person"/>
                            <field name="show_additional_note"/>
                            <field name="show_delivery_address"/>
                            <field name="show_subject"/>
                            <field name="show_project"/>
                            <field name="show_po_no"/>
                            <field name="show_do_no"/>
                            <!--<field name="show_job_no"/>-->
                            <field name="for_left"/>
                            <field name="for_right"/>
                            <field name="hide_global_discount"/>
                            <field name="is_print_currency_id"/>
                            <field name="is_print_previous_balance"/>
                            <field name="is_show_product_description"/>
                            <field name="is_show_header_footer"/>
                            <field name="is_show_accounting_date"/>
                            <field name="show_contract_invoice"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='narration']" position="after">
                    <group>
                        <group>
                            <field name="additional_note" placeholder="Additional Note" nolabel="1"
                                   attrs="{'invisible':[('show_additional_note','=',False)]}"/>
                        </group>
                        <group>

                        </group>
                    </group>

                </xpath>

                <!--Bank details-->
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="bank_detail_enable" string="Bank Detail enable" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"/>
                </xpath>

                <!--Signature-->
                <xpath expr="//page[@id='invoice_tab']" position="inside">
                    <group string="Signature">
                        <group>
                            <field name="prepared_by"/>
                        </group>
                        <group>
                            <field name="approve_by"/>
                        </group>
                    </group>
                </xpath>

                <!--Intercompany-->
                <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group[1]/field[@name='product_uom_id']"
                       position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                    <attribute name="options">{'no_open':True}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']"
                       position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                    <attribute name="options">{'no_open':True}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="line_no" string="Sr. No." readonly="1" style="text-align:center"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field name="total_contr_amt" force_save="1"/>
                    <field name="previous_p" attrs="{'column_invisible': [('parent.show_contract_invoice','=',False)]}" force_save="1"/>
                    <field name="work_done" attrs="{'column_invisible': [('parent.show_contract_invoice','=',False)]}" force_save="1"/>
                    <field name="total_work_done" attrs="{'column_invisible': [('parent.show_contract_invoice','=',False)]}" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="after">
                    <field name="tax_amt"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_tree_pt" model="ir.ui.view">
            <field name="name">account.move.tree.pt</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="before">
                    <!--             <field name="invoice_partner_display_name" position="after">-->
                    <field name="subject" string="Subject"
                           attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"
                           groups="base.group_user" optional="hide"/>
                    <field name="lpo_no"
                           attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'out_invoice'])]}"
                           groups="base.group_user" optional="hide"/>

                </xpath>
            </field>
        </record>

