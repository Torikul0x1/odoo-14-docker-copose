<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_inherit_default_settings" model="ir.ui.view">
            <field name="name">res.company.report.settings</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                        <separator colspan="2" style="text-decoration: underline;color:#6d7475" string="Header &amp; Footer-I"/>


                </xpath>


                <xpath expr="//field[@name='phone']" position="before">
                    <separator colspan="2" style="text-decoration: underline;color:#6d7475"  string="Footer-II"/>

                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <separator colspan="2" style="text-decoration: underline;color:#6d7475" string="Footer-III"/>

                </xpath>
<!--                <xpath expr="//field[@name='vat']" position="after">-->
<!--                    <field name="line_1"/>-->
<!--                    <field name="line_2"/>-->
<!--                    <field name="line_3"/>-->
<!--                </xpath>-->

                <xpath expr="//field[@name = 'website']" position="after">
                        <field name="facebook"/>
                        <field name="twitter"/>
                        <field name="youtube"/>
                </xpath>
                <!--Bank Details-->
                <xpath expr="//form/sheet/notebook/page[1]" position="after">
                    <page string="Company Bank Details" name="bank_details">
                        <group string="Bank Details" name="bank_details_group">
                            <field name="bank_name"/>
                            <field name="bank_account_number"/>
                            <field name="bank_iban_number"/>
                            <field name="bank_address"/>
                            <field name="bank_branch"/>
                        </group>
                    </page>
                    <page string="Configure Document Layout" name="config_document_layout">
                        <button name="%(web.action_base_document_layout_configurator)d"
                                string="Configure Document Layout" type="action" class="oe_link" icon="fa-arrow-right"/>
                    </page>
                </xpath>

<!--                header_footer_logo-->
                <xpath expr="//notebook" position="inside">
                    <page string="Report Images" name="partner_logo">
                        <group>
                            <group string="Header">
                                <field name="header_logo" widget="image"/>
                            </group>
                            <group string="Footer">
                                <field name="partner_logo" widget="image"/>
<!--                                <field name="footer_text"/>-->
                            </group>
                        </group>
                    </page>
                </xpath>


                <!--Inter company-->
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="account_dashboard_onboarding_state" invisible="1"/>
                </xpath>

            </field>
	</record>
    </data>
</odoo>

