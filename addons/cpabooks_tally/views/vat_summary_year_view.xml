<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="vat_summary_year_list_view" model="ir.ui.view">
            <field name="name">vat.summary.year.list.view</field>
            <field name="model">vat.summary.year</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sales" sum="Total"/>
                    <field name="sale_tax" sum="Total"/>
                    <field name="purchase" sum="Total"/>
                    <field name="purchase_tax" sum="Total"/>
                    <field name="net_vat_position" sum="Total"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="vat_summary_year_form_view" model="ir.ui.view">
            <field name="name">vat.summary.year.form.view</field>
            <field name="model">vat.summary.year</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <!--                            <span class="o_form_label">Import Purchase</span>-->
                            <span class="o_form_label">VAT Summary</span>
                            <h1>
                                <!--                                <field name="priority" widget="priority" class="mr-3"/>-->
                                <field name="name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page name="summary_line" string="Summary">
                                <field name="summary_line" editable="bottom" widget="one2many_list">
                                    <tree editable="bottom">
<!--                                        <field name="summary_id" invisible="1"/>-->
                                        <field name="sr_no" readonly="1"/>
                                        <field name="name"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="sales" sum="Total"/>
                                        <field name="sale_tax" sum="Total"/>
                                        <field name="purchase" sum="Total"/>
                                        <field name="purchase_tax" sum="Total"/>
                                        <field name="net_vat_position" sum="Total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_vat_summary_year" model="ir.actions.act_window">
            <field name="name">VAT Summary Year</field>
            <field name="res_model">vat.summary.year</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>