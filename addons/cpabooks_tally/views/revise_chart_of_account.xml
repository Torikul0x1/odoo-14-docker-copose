<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="account_tree_view" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree editable="top" create="1" delete="1" multi_edit="1" string="Chart of accounts">
                    <field name="code" readonly="1"/>
                    <field name="proposed_code"/>
                    <field name="name" readonly="1"/>
                    <field name="revise"/>
                    <field name="user_type_id" readonly="1" widget="account_hierarchy_selection"/>
                    <field name="proposed_type_id" optional="show"/>
                    <field name="group_id" readonly="1" optional="show"/>
                    <field name="proposed_group_id" optional="show"/>
                    <field name="internal_type" readonly="1" invisible="1"/>
                    <field name="internal_group" readonly="1" invisible="1"/>
                    <field name="reconcile" optional="hide" readonly="1" widget="boolean_toggle"
                           attrs="{'invisible': ['|', ('internal_type','=','liquidity'), ('internal_group', '=', 'off_balance')]}"/>
                    <field name="tax_ids" readonly="1" optional="hide" widget="many2many_tags"/>
                    <field name="tag_ids" readonly="1" optional="hide" widget="many2many_tags"/>
                    <field name="allowed_journal_ids" readonly="1" optional="hide" widget="many2many_tags"/>
                    <field name="currency_id" readonly="1" options="{'no_create': True}" groups="base.group_multi_currency"/>
                    <field name="company_id" readonly="1" options="{'no_create': True}" groups="base.group_multi_company"/>
                    <button name="action_read_account" readonly="1" type="object" string="Setup" class="float-right btn-secondary"/>
                </tree>

            </field>
        </record>
        <!-- Inheriting the product form view -->
        <record id="tally_action_account_form" model="ir.actions.act_window">
            <field name="name">Accounts</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="cpabooks_tally.account_tree_view"/>
<!--            <field name="inherit_id" ref="account.action_account_form"/>-->
        </record>
    </data>
</odoo>
