<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View -->
    <record id="view_order_form_inherit_word" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.word</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <group colspan="2" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                        <label for="num_word" style="margin-right: 8px;"/>
                        <field name="num_word"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Purchase Order Form View -->
    <record id="purchase_order_form_inherit_word" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.word</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='notes']" position="after">
                <group colspan="2" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                        <label for="num_word" style="margin-right: 8px;"/>
                        <field name="num_word"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Invoice form view for Customer Invoice -->
    <record id="view_move_form_inherit_word" model="ir.ui.view">
        <field name="name">account.move.form.inherit.word</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="after">
                <group colspan="2" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                        <label for="num_word" style="margin-right: 8px;"/>
                        <field name="num_word"/>
                    </div>
                </group>
            </xpath>
            <xpath expr="//group/group[2]" position="inside">
                <field name="format_lang"/>
            </xpath>

        </field>
    </record>
</odoo>
