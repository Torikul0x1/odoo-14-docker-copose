<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--TASK REPORT WIZARD FORM VIEW-->
		<record id="task_report_wizard_form_view" model="ir.ui.view">
			<field name="name">task.report.wizard.form.view</field>
			<field name="model">task.report.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<group>
							<field name="user_id"/>
						</group>
						<group>
							<field name="date"/>
						</group>
					</group>
					<footer>
						<button name="action_print_report" type="object" string="Print Report" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<!--ACTION TASK REPORT WIZARD-->
		<record id="action_task_report_wizard" model="ir.actions.act_window">
			<field name="name">action.task.report.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">task.report.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<menuitem id="menu_task_report" action="action_task_report_wizard" parent="project.menu_main_pm" name="Task Report"/>
	</data>
</odoo>