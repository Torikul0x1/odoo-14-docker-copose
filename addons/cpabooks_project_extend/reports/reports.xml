<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_task_report" model="ir.actions.report">
            <field name="name">Daily Task Report</field>
            <field name="model">task.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">cpabooks_project_extend.daily_task_report_template</field>
            <!-- Remove report_file field - let Odoo handle the file -->
            <field name="print_report_name">'Task Report - %s' % (object.date)</field>
            <field name="binding_model_id" ref="model_task_report_wizard"/>
        </record>
    </data>
</odoo>