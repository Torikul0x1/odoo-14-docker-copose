<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--CRM LEAD FORM VIEW INHERIT-->
		<record id="crm_lead_form_view_inherit" model="ir.ui.view">
			<field name="name">crm.lead.form.view.inherit</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_lead_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page name="project_line_ids" string="Projects">
						<field name="project_line_ids">
							<tree editable="bottom">
								<field name="crm_id" invisible="1"/>
								<field name="project_id"/>
								<field name="name"/>
								<field name="pid"/>
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>