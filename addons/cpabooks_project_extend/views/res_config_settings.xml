<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="inherit_res_config_settings_form_view_project_extend" model="ir.ui.view">
            <field name="name">inherit.res.config.settings.project.extend</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_subtask_project']" position="attributes">
                    <attribute name="default">true</attribute>
                </xpath>
                <xpath expr="//field[@name='group_project_recurring_tasks']" position="attributes">
                    <attribute name="default">true</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>