<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="delivery_slip_report_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@class='page']/table/thead/tr/th[1]" position="before">
                <th name="th_line_no" class="text-center">Sl No.</th>
            </xpath>
            <xpath expr="//div[@class='page']/table/tbody/tr/td[1]" position="before">
                <td name="td_line_no" class="text-center">
                    <span t-field="move.line_no"/>
                </td>
            </xpath>
        </template>
        <template id="report_delivery_note_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@class='page']" position="before">
                <h2 style="text-align:center;text-decoration: underline;">Delivery Note</h2>
            </xpath>

            <xpath expr="//table[2][@name='stock_move_line_table']" position="after">
                <h5 style="margin-top:200px;font-size:14px;">Receiver Signature:_________</h5>
            </xpath>
        </template>
    </data>
</odoo>