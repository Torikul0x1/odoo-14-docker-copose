<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="mai_sale_margin_form_view">
			<field name="name">mai.sale.margin.form.view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='sale_total']" position="after">
					<group>
						<field name="margin_culculate" widget='monetary' options="{'currency_field': 'currency_id'}" />

						<field name="margin_custom" widget='monetary' options="{'currency_field': 'currency_id'}" />
					</group>
				</xpath>

				<xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"	position="after">
					<field name="line_margin" string='Margin'/>
				</xpath>
			</field>
		</record>

	</data>
</odoo>