<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mai_product_template_margin_form" model="ir.ui.view">
            <field name="name">product.template.margin.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="margin"/>
                </field>
            </field>
        </record>

        <record id="mai_product_template_margin_tree" model="ir.ui.view">
            <field name="name">product.template.margin.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name='standard_price' position="after">
                    <field name="margin"/>
                </field>
            </field>
        </record>        

        <record id="mai_product_product_margin_form" model="ir.ui.view">
            <field name="name">product.product.margin.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="margin"/>
                </field>
            </field>
        </record>

        <record id="mai_product_product_margin_tree" model="ir.ui.view">
            <field name="name">product.product.margin.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name='standard_price' position="after">
                    <field name="margin"/>
                    <!-- <field name="margin" groups="mai_sale_product_margin.mai_allow_product_margin"/> -->
                </field>
            </field>
        </record> 

<!--         <record id="mai_allow_product_margin" model="res.groups">
            <field name="name">Allow to show product margin</field>
        </record> -->

    </data>
</odoo>