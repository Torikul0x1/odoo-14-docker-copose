<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="mai_account_line_margin_inherit">
			<field name="name">mai.account.line.margin.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='narration']" position="before">
					<group>
						<field name="margin_culculate" widget='monetary' options="{'currency_field': 'currency_id'}" />
						<field name="margin_custom" widget='monetary' options="{'currency_field': 'currency_id'}" />
					</group>
				</xpath>
				<xpath expr="//field[@name='product_uom_id']" position="before">
					<field name="line_margin" />
					<field name="purchase_price" invisible="1"/>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="mai_account_margin_view_graph">
	         <field name="name">mai.margin.graph.inherit</field>
	         <field name="model">account.invoice.report</field>
	         <field name="inherit_id" ref="account.view_account_invoice_report_graph"/>
	         <field name="arch" type="xml">
	             <xpath expr="//field[@name='price_subtotal']" position="after">
					<field name="margin_subtotal_calc" type="measure"/>
				</xpath>
	         </field>
	    </record>

		<record model="ir.ui.view" id="mai_account_margin_view_pivot">
			<field name="name">mai.margin.pivot.inherit</field>
			<field name="model">account.invoice.report</field>
			<field name="inherit_id" ref="account.view_account_invoice_report_pivot"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='price_subtotal']" position="after">
					<field name="margin_subtotal_calc" type="measure"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
