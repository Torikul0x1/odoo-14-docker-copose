<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <div id="languages" position="after">
                    <h2>Twak.to Settings</h2>
                    <div class="row mt16 o_settings_container" id="rma_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="twak_to_install_setting"
                            title="Set the twak.to site/widget ID." >
                            <div class="o_setting_right_pane">
                                <label for="tawk_to_site_widget_id" string="Twak to settings" />
                                <div class="text-muted" id="website_twak_to_settings">
                                    Set the tawk.to site/widget ID
                                </div>
                                <div class="row">
                                    <label class="col-lg-3 o_light_label" string="Twak.to ID" for="tawk_to_site_widget_id" />
                                    <field name="tawk_to_site_widget_id" class="oe_inline" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
