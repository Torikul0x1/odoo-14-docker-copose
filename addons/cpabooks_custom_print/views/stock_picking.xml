<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form View -->
    <record id="view_stock_picking_extend" model="ir.ui.view">
        <field name="name">view.stock.picking.extend</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_validate'][2]" position="after">
<!--                <button name="set_quantities" string="Set Quantities" type="object"/>-->
                   <button name="action_set_quantities_to_reservation" attrs="{'invisible': ['|', ('show_validate', '=', False), ('immediate_transfer', '=', True)]}" string="Set quantities" type="object" groups="stock.group_stock_user" class="o_btn_validate" data-hotkey="g"/>
            </xpath>
        </field>
    </record>
</odoo>
