<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Account Move Form View -->
    <record id="view_move_form_inherit_custom_print" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom_print</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="delivery_detail" attrs="{'invisible':[('move_type','=', 'entry')]}"/>
                <field name="make_detail" attrs="{'invisible':[('move_type','=', 'entry')]}"/>
            </xpath>
            <xpath expr="//field[@name='narration']" position="before">
                <div class="oe_inline" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                    <label for="num_word" style="margin-right: 8px;"/>
                    <field name="num_word"/>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
