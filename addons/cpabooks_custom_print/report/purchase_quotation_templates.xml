<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchasequotation_document_inherit_custom" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <div class="page">
                    <div class="oe_structure"/>

                    <h2 class="text-center">Request for Quotation <span t-field="o.name"/></h2>

                    <div class="row oe_mt16 oe_mb16">
                        <div class="col-6">
                            <strong>Supplier: </strong>
                            <div t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div class="col-6 text-right">
                            <t t-if="o.dest_address_id">
<!--                                <strong>Ship To: </strong>-->
                                <strong>Delivery To: </strong>
                                <div t-field="o.dest_address_id" t-options='{"widget": "contact", "fields": ["name", "address", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </t>
                        </div>
                    </div>

                    <table class="table table-sm">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_sr_no" class="text-center"><strong>Sl No.</strong></th>
                                <th name="th_description" class="text-center"><strong>Description</strong></th>
                                <th name="th_expected_date" class="text-center"><strong>Expected Date</strong></th>
                                <th name="th_quantity" class="text-center"><strong>Qty</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="sr_no" t-value="1"/>
                            <t t-foreach="o.order_line" t-as="order_line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                    <t t-if="not order_line.display_type">
                                        <td class="text-center">
                                            <span t-esc="sr_no"/>
                                            <t t-set="sr_no" t-value="sr_no+1"/>
                                        </td>
                                        <td id="product">
                                            <span t-field="order_line.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="order_line.date_planned"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="order_line.product_qty"/>
                                            <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td colspan="99" id="section">
                                            <span t-field="order_line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <p t-field="o.notes"/>

                    <div class="oe_structure"/>
                </div>
            </t>
        </xpath>
    </template>

    <!--Inherit Quotation Report for Metrix-->
    <template id="grid_report_purchaseorder_template_inherit_custom" inherit_id="purchase_product_matrix.grid_report_purchaseorder_template_inherit">
        <xpath expr="//t[@t-call='product_matrix.matrix']" position="replace"/>
    </template>
</odoo>
