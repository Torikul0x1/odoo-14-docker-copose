                         <div class="col-2">
                             <strong>Delivery </strong>
                         </div>
                         <div class="col-10">
                             <span>: </span><span t-field="o.delivery_detail"/>
                         </div>
                     </div>
                     <div class="row" t-if="o.move_type == 'out_invoice'">
                         <div class="col-2">
                             <strong>Make </strong>
                         </div>
                         <div class="col-10">
                             <span>: </span><span t-field="o.make_detail"/>
