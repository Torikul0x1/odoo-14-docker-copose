<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_custom" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <h2 class="text-center">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                            <u>TAX INVOICE</u>
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                            <u>Draft Invoice</u>
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                            <u>Cancelled Invoice</u>
                        </span>
                        <span t-if="o.move_type == 'out_refund'">
                            <u>Credit Note</u>
                        </span>
                        <span t-if="o.move_type == 'in_refund'">
                            <u>Vendor Credit Note</u>
                        </span>
                        <span t-if="o.move_type == 'in_invoice'">
                            <u>Vendor Bill</u>
                        </span>
                    </h2>

                    <h5 class="text-center" style="margin-top:-8px;font-size:18px;">
                        <div t-if="o.move_type == 'out_invoice'">
                            <strong>TRN:</strong>
                            <span t-field="o.company_id.vat"/>
                        </div>
                        <div>
                            <strong t-if="o.move_type == 'out_invoice' and o.name != '/'">Invoice No:</strong>
                            <strong t-if="o.move_type == 'in_invoice' and o.name != '/'">BILL No:</strong>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </div>
                    </h5>

                    <div class="row oe_mt16">
                        <div class="col-6">
                            <strong>Customer:</strong>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["name","vat", "address"], "no_marker": True}'/>
                        </div>
                        <div class="col-6 text-right">
                            <t t-if="o.partner_shipping_id" groups="sale.group_delivery_invoice_address">
                                <strong>Delivery Address:</strong>
                                <div t-field="o.partner_shipping_id"
                                     t-options='{"widget": "contact", "fields": ["name", "address", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </t>
                        </div>
                    </div>

                    <!--<div class="row oe_mt16">
                        <div class="col-12">
                            <strong>Reference: </strong><span t-if="o.name != '/'" t-field="o.name"/>
                        </div>
                    </div>-->

                    <div id="informations" class="row oe_mt16 oe_mb16">
                        <div class="col-auto col-2 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto col-2 mw-100 mb-2"
                             t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                             name="due_date" style="display: none;">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto col-2 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto col-2 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto col-2 mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Customer Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                        <t t-set="do_no" t-value="o.get_do()"/>
                        <div class="col-auto col-2 mw-100 mb-2" t-if="do_no" name="do_no">
                            <strong>DO. No.:</strong>
                            <p class="m-0" t-esc="do_no"/>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th name="th_sr_no" class="text-center">
                                    <strong>Sr. No.</strong>
                                </th>
                                <!--                                <th name="th_item_code" class="text-center"><strong>Item Code</strong></th>-->
                                <th name="th_description" class="text-center">
                                    <strong>Description</strong>
                                </th>
                                <th name="th_quantity" class="text-center">
                                    <strong>Qty</strong>
                                </th>
                                <th name="th_unit" class="text-center">
                                    <strong>Units</strong>
                                </th>
                                <th name="th_priceunit"
                                    t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <strong>Unit Price</strong>
                                </th>
                                <th name="th_price_unit" t-if="display_discount"
                                    t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <strong>Disc.%</strong>
                                </th>
                                <th name="th_taxes"
                                    t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <strong>VAT</strong>
                                </th>
                                <th name="th_subtotal" class="text-right">
                                    <strong groups="account.group_show_line_subtotals_tax_excluded">Amount</strong>
                                    <strong groups="account.group_show_line_subtotals_tax_included">Total Price</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="sr_no" t-value="1"/>
                            <t t-set="lines"
                               t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                   groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td class="text-center">
                                            <span t-esc="sr_no"/>
                                            <t t-set="sr_no" t-value="sr_no+1"/>
                                        </td>
                                        <!--                                        <td name="td_item_code">-->
                                        <!--                                            <span t-field="line.product_id.item_code"/>-->
                                        <!--                                        </td>-->
                                        <td name="account_invoice_line_name">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td name="td_unit" class="text-left">
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                  id="line_tax_ids"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total"
                                                  groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div class="col-8">
                                <div class="oe_mt16 oe_mb16">
                                    <strong>Amount In Words:</strong>
                                    <span t-field="o.num_word"/>
                                    <span>Only.</span>
                                </div>
                            </div>
                            <!--<div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">-->
                            <div class="col-4">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td>
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <!--<t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">-->
                                            <t t-if="amount_by_group">
                                                <td>
                                                    <span t-if="amount_by_group" class="text-nowrap"
                                                          t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-if="amount_by_group" class="text-nowrap"
                                                          t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-if="amount_by_group" t-esc="amount_by_group[0]"/>
                                                    <span t-if="amount_by_group" class="text-nowrap">on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-if="amount_by_group" class="text-nowrap"
                                                          t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals"
                                               t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">Paid on
                                                            <t t-esc="payment_vals['date']"
                                                               t-options='{"widget": "date"}'/>
                                                        </i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']"
                                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black">
                                                    <td>
                                                        <strong>Amount Due</strong>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>

                    <p name="payment_communication" style="display: none;"/>
                    <p name="payment_term" style="display: none;"/>

                    <!-- <div class="row oe_mt16" t-if="o.move_type == 'out_invoice'">
                         <div class="col-2">
                             <strong>Payment Reference </strong>
                         </div>
                         <div class="col-10">
                             <span>: </span><span t-field="o.payment_reference"/>
                         </div>
                     </div>
