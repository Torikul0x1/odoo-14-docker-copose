<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--List view for Tenant-->
		<record id="view_maintenance_tenant_tree" model="ir.ui.view">
			<field name="name">view.maintenance.tenant.tree</field>
			<field name="model">maintenance.tenant</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" string="Tenant"/>
					<field name="mobile" widget="phone"/>
					<field name="email" widget="email"/>
				</tree>
			</field>
		</record>
		
		<!--Form view for Tenant-->
		<record id="view_maintenance_tenant_form" model="ir.ui.view">
			<field name="name">view.maintenance.tenant.form</field>
			<field name="model">maintenance.tenant</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" placeholder="Tenant" nolabel="1"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="email" widget="email"/>
								<field name="mobile" widget="phone"/>
							</group>
							<group>
								<field name="project_id"/>
								<field name="analytical_account_id"/>
								<field name="task_id" doman="[('project_id', '=', project_id)]"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!--Action for Tenant-->
		<record id="action_maintenance_tenant" model="ir.actions.act_window">
			<field name="name">Tenants</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">maintenance.tenant</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<!--Menu item for tenant-->
		<menuitem id="menu_maintenance_tenant" name="Tenant" action="action_maintenance_tenant"
		          parent="maintenance.menu_maintenance_configuration"/>
	</data>
</odoo>