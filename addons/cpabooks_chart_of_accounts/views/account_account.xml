<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_account_form_inherit" model="ir.ui.view">
            <field name="name">account.account.form.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='deprecated']" position="after">
                    <field name="get_previous"/>
                    <field name="identity_code" string="Identity Code" readonly="1" force_save="1"/>
                </xpath>

                <xpath expr="//div[@class='oe_title']/div/field[@name='code']" position="before">
                    <label for="previous" invisible="1" attrs="{'invisible': [('get_previous', '=', False)]}"/>
                    <field name="previous" invisible="1" attrs="{'invisible': [('get_previous', '=', False)]}"/>
                </xpath>
                <!--                <xpath expr="//div[@class='oe_title']" position="inside">-->
                <!--                        <field name="group_id" string="Select Group" attrs="{'invisible': [('get_previous', '=', False)]}" placeholder="Group"/>-->
                <!--                    &lt;!&ndash;                    <label for="group_id" attrs="{'invisible': [('get_previous', '=', False)]}"/>&ndash;&gt;-->
                <!--                </xpath>-->

                <xpath expr="//div[@class='oe_title']/div/field[@name='name']" position="attributes">
                    <attribute name="placeholder">Insert New Ledger Name</attribute>
                </xpath>

                <xpath expr="//field[@name='group_id']" position="attributes">
                    <attribute name="string">Select Group</attribute>
                </xpath>

                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="qid" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_tree_inherit" model="ir.ui.view">
            <field name="name">account.account.tree.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <header>
                        <!--                        <button type="object" name="load_qid" string="Load QID" class="oe_highlight m-2" groups="base.group_system"/>-->
                        <!--                        <button type="object" name="reset_coa" string="Reset COA" class="oe_highlight m-2" groups="base.group_system"/>-->
                        <!--                        <button type="object" name="reset_type" string="Reset Type" class="oe_highlight m-2" groups="base.group_system"/>-->
                        <button type="object" name="reset_all" string="Reset all" title="Create Default COAs"
                                class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="delete_wizard" string="Factory Reset"
                                title="Delete all Unnecessary COAs" class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="action_view_rules" string="VR" class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="action_remove_group" string="Remove Groups"
                                title="Remove groups from all COAs" class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="create_deferred_expense_model" string="Create Prepaid Rules"
                                title="Create Prepaid Rules" class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="action_toggle_code" string="Toggle Code"
                                title="Hide and Show codes in reports" class="oe_highlight m-2"
                                groups="base.group_system"/>

                        <button type="object" name="action_show_code_true" title="Make All Show Code fields True"
                                string="SCT" class="oe_highlight m-2" groups="base.group_system"/>

                        <button type="object" name="action_update_selected" string="Upd Spc Ledger"
                                title="update Selected COAs only" class="oe_highlight m-2" groups="base.group_system"/>

                        <button type="object" name="action_create_far_rules" string="Create FAR Rules"
                                title="Create fixed assets depreciation methods." class="oe_highlight m-2" groups="base.group_system"/>

                        <button type="object" name="action_create_journals_from_coa" string="Create JV"
                                title="Create Journals form COAs" class="oe_highlight m-2" groups="base.group_system"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='reconcile']" position="attributes">
                    <attribute name="optional">0</attribute>
                </xpath>
                <xpath expr="//field[@name='group_id']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_show_code" optional="0"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
            </field>
        </record>

        <record id="account.action_account_form" model="ir.actions.act_window">
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        </record>


    </data>
</odoo>