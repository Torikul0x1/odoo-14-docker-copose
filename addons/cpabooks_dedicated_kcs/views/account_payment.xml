<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--Receipt voucher form view-->
		<record id="view_account_payment_form_inherit" model="ir.ui.view">
			<field name="name">view.account.payment.form.inherit</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">
				<!-- <xpath expr="//form/sheet" position="inside">
               	 	<field name="available_partner_bank_ids" invisible="1"/>
            	</xpath> -->
				<xpath expr="//group/group[2]" position="inside">
					<field name="so_id" domain="[('partner_id', '=', partner_id)]" attrs="{'invisible': [('partner_id', '=', False)]}"/>
				</xpath>
				<xpath expr="//group/group[@name='group2']" position="inside">
					<field name="signatory_id"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
