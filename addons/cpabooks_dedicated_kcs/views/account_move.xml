<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="invoice_tree_view_inherit" model="ir.ui.view">
        <field name="name">invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total_signed" position="after">
                <field name="currency_rate" optional="hide"/>
                <field name="total_in_aed" optional="hide" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
            </field>
	        <xpath expr="//field[@name='amount_residual']" position="before">
		        <field name="amount_paid" optional="show"/>
	        </xpath>
	        <xpath expr="//tree" position="inside">
		        <header>
			        <button name="action_compute_paid_amt" type="object" class="oe_highlight" string="Re-Compute"/>
		        </header>
	        </xpath>

        </field>
    </record>

    <record id="invoice_form_view_inherit" model="ir.ui.view">
        <field name="name">invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                 <field name="bank_details" widget="many2many_tags"/>
<!--                <field name="demo_bank_details" widget="many2many_tags" />-->
<!--                invisible="1"-->

            </xpath>

        </field>
    </record>

    <record id="invoice_form_view_bank_inherit" model="ir.ui.view">
        <field name="name">invoice.form.bank.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="cpabooks_bank_details.view_move_form_inherit_bank"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bank_detail_enable']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>