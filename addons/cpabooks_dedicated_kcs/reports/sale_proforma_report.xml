    <template id="report_sale_template_extend_for_serial"
              inherit_id="serial_on_report.serial_no_saleorder_document_inherit">
        <xpath expr="//th[@name='th_serial_no']" position="replace">
<!--            <span>S. No.</span>-->
            <t t-if="doc.company_id.id==5">
                <th name="th_serial_no" class="text-center" style="text-transform: capitalize;vertical-align: middle;">
                    <div style="width:100%;text-align:center;">
                        <span>S. No.</span>
                    </div>
                </th>
            </t>
            <t t-if="doc.company_id.id!=5">
                <th name="th_serial_no" class="text-center" style="text-transform: capitalize;vertical-align: middle;">
                    <div style="width:50px;text-align:center;">
                        <span>S. No.</span>
                    </div>
                </th>
            </t>
        </xpath>
        <xpath expr="//td[@name='td_line_no']"  position="attributes">
            <attribute name="style">vertical-align: middle;</attribute>
        </xpath>
    </template>
