        <xpath expr="//td[@name='td_amount_by_group_label_3']/span[2]" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <!-- ON remove from small Table-->

        <!--Total In small table bold and black-->
         <xpath expr="//table[@class='table table-sm']/tr[@class='border-black o_total']" position="replace">
            <t t-if="doc.company_id.id==5">
                <tr class="border-black o_total">
                    <td>
                        <span style="color:black;font-weight:bold;">Total</span>
                    </td>
                    <td class="text-right">
                        <span style="color:black;font-weight:bold;" class="text-nowrap" t-field="doc.amount_total"/>
                    </td>
                </tr>
            </t>
            <t t-if="doc.company_id.id!=5">
                <tr class="border-black o_total">
                    <td>
                        <span style="font-weight:bold;">Total</span>
                    </td>
                    <td class="text-right">
                        <span style="font-weight:bold;" class="text-nowrap" t-field="doc.amount_total"/>
