<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="sale_view_inherit_for_job" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_create_job" type="object" class="btn-primary" string="Job Order"/>

            </xpath>

            <xpath expr="//div[@name='button_box']/button[@name='action_view_invoice']" position="after">
                <field name="job_count" invisible="1"/>
                <button name="action_view_job" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="job_count" widget="statinfo" string="Job Order"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>