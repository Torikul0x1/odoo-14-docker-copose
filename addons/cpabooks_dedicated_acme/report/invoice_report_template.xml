<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_report_for_acme_discount"
              inherit_id="bi_sale_discount_with_tax.report_invoice_discount_inherit">
        <xpath expr="//span[@t-field='o.total_after_discount']" position="replace">
            <span t-esc="'{:,.2f}'.format(o.total_after_discount)"/>

        </xpath>

        <xpath expr="//span[@t-field='o.discount_amt']" position="replace">
            <span t-esc="'{:,.2f}'.format(o.discount_amt)"/>

        </xpath>

        <xpath expr="//span[@t-field='o.discount_amt_line']" position="replace">
            <span t-esc="'{:,.2f}'.format(o.discount_amt_line)"/>

        </xpath>



    </template>

    <template id="report_invoice_report_for_acme"
              inherit_id="cpabooks_custom_print.report_invoice_document_inherit_custom">
        <!--        region CUSTOMER COLOR-->
        <xpath expr="//div[@class='row oe_mt16']/div[1]" position="replace">
            <div class="col-6">
                <span style="color:#19a8e6;font-weight:bold;">Customer:</span>
                <div t-field="o.partner_id"
                     t-options='{"widget": "contact", "fields": ["name","vat", "address"], "no_marker": True}'/>
            </div>
        </xpath>
        <!--        endregion-->


        <xpath expr="//h5/div[2]" position="replace">
            <div>
                <strong t-if="o.move_type == 'out_invoice' and o.name != '/'">INVOICE NO.:</strong>
                <strong t-if="o.move_type == 'in_invoice' and o.name != '/'">BILL NO.:</strong>
                <span t-if="o.name != '/'" t-field="o.name"/>
            </div>
        </xpath>

        <!--        region MAIN INFORMATIONS HIDE-->
        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <!--        endregion-->

        <!--        region RIGHT ALIGN INFORMATIONS-->
        <xpath expr="//div[@class='row oe_mt16']/div[@class='col-6 text-right']" position="replace">
            <!--            border border-warning-->
            <div class="col-6">
                <div class="row">
                    <div class="col-5">
                        <span style="color:#19a8e6;font-weight:bold;text-align:left;">Invoice Date</span>
                    </div>
                    <div class="col-1">
                        <span style="color:#19a8e6;font-weight:bold;">:</span>
                    </div>
                    <div class="col-6" name="invoice_date" t-if="o.invoice_date">
                        <span style="text-align:left;" class="m-0" t-field="o.invoice_date"/>
                    </div>
                </div>
                <div class="row align-items-end" name="payment_term" t-if="o.invoice_payment_term_id">

                    <div class="col-5">
                        <span style="color:#19a8e6;font-weight:bold;text-align:right">Payment Terms</span>

                    </div>
                    <div class="col-1">
                        <span style="color:#19a8e6;font-weight:bold;">:</span>
                    </div>
                    <div class="col-6">
                        <span style="text-align:right;" class="m-0" t-field="o.invoice_payment_term_id"/>
                    </div>
                </div>
                <!--                         <div class="row align-items-end" name="due_date" t-if="o.invoice_date_due">-->

                <!--                            <div class="col-5">-->
                <!--                                <span style="color:#19a8e6;font-weight:bold;text-align:right">Due Date </span>-->

                <!--                            </div>-->
                <!--                              <div class="col-1">-->
                <!--                                  <span style="color:#19a8e6;font-weight:bold;">:</span>-->
                <!--                                </div>-->
                <!--                             <div class="col-6">-->
                <!--                                <span style="text-align:right;" class="m-0" t-field="o.invoice_date_due"/>-->
                <!--                            </div>-->
                <!--                        </div>-->
                <div class="row align-items-end" name="lpo_number" t-if="lpo_no">

                    <div class="col-5">
                        <span style="color:#19a8e6;font-weight:bold;text-align:right">LPO No</span>

                    </div>
                    <div class="col-1">
                        <span style="color:#19a8e6;font-weight:bold;">:</span>
                    </div>
                    <div class="col-6">
                        <span style="text-align:right;" class="m-0" t-esc="lpo_no"/>
                    </div>
                </div>
                <!--                        <div class="row align-items-end" name="source_no" t-if="o.invoice_origin">-->

                <!--                            <div class="col-5">-->
                <!--                                <span style="color:#19a8e6;font-weight:bold;text-align:right">Source  </span>-->

                <!--                            </div>-->
                <!--                            <div class="col-1">-->
                <!--                                  <span style="color:#19a8e6;font-weight:bold;">:</span>-->
                <!--                                </div>-->
                <!--                            <div class="col-6">-->
                <!--                                <span style="text-align:right;" class="m-0" t-field="o.invoice_origin"/>-->
                <!--                            </div>-->
                <!--                        </div>-->
                <t t-set="do_no" t-value="o.get_do()"/>
                <div class="row align-items-end" name="delivery_note_no" t-if="do_no">

                    <div class="col-5">
                        <span t-if="o.move_type=='out_invoice'" style="color:#19a8e6;font-weight:bold;text-align:right">
                            Delivery No
                        </span>
                        <span t-if="o.move_type=='in_invoice'" style="color:#19a8e6;font-weight:bold;text-align:right">
                            Receive No
                        </span>

                    </div>
                    <div class="col-1">
                        <span style="color:#19a8e6;font-weight:bold;">:</span>
                    </div>
                    <div class="col-6">
                        <span style="text-align:right;" class="m-0" t-esc="do_no"/>
                    </div>
                </div>
                <t t-set="lpo_no" t-value="o.get_lpo()"/>
                <!--                        <div class="row align-items-end" name="lpo_number" t-if="lpo_no">-->

                <!--                            <div class="col-5">-->
                <!--                                <span style="color:#19a8e6;font-weight:bold;text-align:right">LPO No </span>-->

                <!--                            </div>-->
                <!--                             <div class="col-1">-->
                <!--                                  <span style="color:#19a8e6;font-weight:bold;">:</span>-->
                <!--                                </div>-->
                <!--                            <div class="col-6">-->
                <!--                                <span style="text-align:right;" class="m-0" t-esc="lpo_no"/>-->
                <!--                            </div>-->
                <!--                        </div>-->
                <div class="row align-items-end" name="job_no" t-if="o.project_id">

                    <div class="col-5">
                        <span style="color:#19a8e6;font-weight:bold;text-align:right">Job No</span>

                    </div>
                    <div class="col-1">
                        <span style="color:#19a8e6;font-weight:bold;">:</span>
                    </div>
                    <div class="col-6">
                        <span style="text-align:right;" class="m-0" t-field="o.project_id"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!--        endregion-->

        <!--        region MAIN TABLE HEADER-->
        <xpath expr="//table[@name='invoice_line_table']/thead" position="replace">
            <thead style="background-color:#def4fa;">
                <tr>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_sr_no" class="text-center">
                        <strong>Sl. No.</strong>
                    </th>
                    <!--                                <th name="th_item_code" class="text-center"><strong>Item Code</strong></th>-->
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_product" class="text-center">
                        <strong>Product</strong>
                    </th>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_description"
                        class="text-center">
                        <strong>Description</strong>
                    </th>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_unit" class="text-center">
                        <strong>Units</strong>
                    </th>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_quantity" class="text-center">
                        <strong>Qty</strong>
                    </th>

                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_priceunit"
                        t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <strong>Unit Price</strong>
                    </th>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_price_unit"
                        t-if="display_discount"
                        t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <span>Disc.%</span>
                    </th>
                    <th style="border:1px solid #d2d7d9;vertical-align:middle;" name="th_taxes"
                        t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <span>VAT</span>
                    </th>
                    <th style="border:1px solid #d2d7d9; vertical-align:middle;" name="th_subtotal" class="text-right">
                        <strong groups="account.group_show_line_subtotals_tax_excluded">Amount (<span
                                t-field="o.currency_id.name"/>)
                        </strong>
                        <strong groups="account.group_show_line_subtotals_tax_included">Total Price (<span
                                t-field="o.currency_id.name"/>)
                        </strong>
                    </th>
                </tr>
            </thead>
        </xpath>
        <!--        endregion-->
        <!--        region MAIN TABLE BODY-->
        <xpath expr="//table[@name='invoice_line_table']/tbody" position="replace">
            <tbody class="invoice_tbody">
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="sr_no" t-value="1"/>
                <t t-set="lines"
                   t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                <t t-foreach="lines" t-as="line">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                       groups="account.group_show_line_subtotals_tax_excluded"/>
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                       groups="account.group_show_line_subtotals_tax_included"/>

                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                            <td style="border:1px solid #d2d7d9;" class="text-center">
                                <span t-esc="sr_no"/>
                                <t t-set="sr_no" t-value="sr_no+1"/>
                            </td>
                            <!--                                        <td name="td_item_code">-->
                            <!--                                            <span t-field="line.product_id.item_code"/>-->
                            <!--                                        </td>-->
                            <td style="border:1px solid #d2d7d9;" name="product_name">
                                <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;" name="account_invoice_line_name">
                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;" name="td_unit" class="text-left">
                                <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;" class="text-right">
                                <span t-field="line.quantity"/>
                            </td>

                            <td style="border:1px solid #d2d7d9;"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span class="text-nowrap" t-field="line.price_unit"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;" t-if="display_discount"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span class="text-nowrap" t-field="line.discount"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                      id="line_tax_ids"/>
                            </td>
                            <td style="border:1px solid #d2d7d9;" class="text-right o_price_total">
                                <!--                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" widget="monetary"/>-->
                                <!--                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" widget="monetary"/>-->

                                <span class="text-nowrap" t-esc="'{:,.2f}'.format(line.price_subtotal)"
                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                <span class="text-nowrap" t-esc="'{:,.2f}'.format(line.price_total)"
                                      groups="account.group_show_line_subtotals_tax_included"/>
                            </td>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                            <td style="border:1px solid #d2d7d9;" colspan="99">
                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>
                        <t t-if="line.display_type == 'line_note'">
                            <td style="border:1px solid #d2d7d9;" colspan="99">
                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                        </t>
                    </tr>

                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-right">
                            <td style="border:1px solid #d2d7d9;" colspan="99">
                                <strong class="mr16">Subtotal</strong>
                                <span
                                        t-esc="'{:,.2f}'.format(current_subtotal)"
                                />

                                <!--                                     t-options='{"widget": "monetary", "display_currency": o.currency_id}'-->
                            </td>
                        </tr>
                    </t>
                </t>
            </tbody>
        </xpath>
        <!--        endregion-->

        <!--        region AMOUNT IN WORDS-->
        <xpath expr="//div[@class='clearfix']/div[@id='total']/div[1]/div" position="replace">
            <div class="oe_mt16 oe_mb16">
                <span style="color:#19a8e6;font-weight:bold;">Amount In Words:</span>
                <span t-esc="o.num_word.replace(',','')"/>
                <span>Only.</span>
            </div>
        </xpath>
        <!--        endregion-->


        <!--        region NOTE PART-->
        <xpath expr="//div[@name='note']" position="replace">
            <!--                <attribute name="style">display:none;</attribute>-->

        </xpath>


        <!--        endregion-->
        <!--        region BANK DETAILS-->
        <xpath expr="//div[@class='oe_mt32']/h5" position="attributes">
            <attribute name="style">text-decoration: underline;color:#19a8e6;</attribute>
        </xpath>
        <!--        endregion-->
        <!--        region BANK DETAILS-->
        <xpath expr="//div[@class='oe_mt32']/h5" position="attributes">
            <attribute name="style">text-decoration: underline;color:#19a8e6;</attribute>
        </xpath>
        <!--        endregion-->
        <!--        region NOTE PART-->
        <xpath expr="//div[@name='bank_details']" position="after">
            <div class="row" name="note" style="margin-top:10px">
                <div class="col-2" t-if="o.narration">
                    <span style="color:#19a8e6;font-weight:bold;">Note:</span>
                </div>
                <div class="col-10">
                    <span t-field="o.narration"/>
                </div>
            </div>
        </xpath>
        <!--        endregion-->

        <!--        region Disclaimer and signature PART-->
        <xpath expr="//div[@t-if='o.disclaimer']" position="replace">

        </xpath>

        <xpath expr="//div[@t-if='signature']" position="before">
            <div t-if="o.disclaimer" style="page-break-inside: avoid; margin-top: 10px;">
                <span style="color:#19a8e6;font-weight:bold;">Disclaimer</span>
                <br/>
                <span t-field="o.disclaimer"/>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='signature']" position="replace">
            <div class="row oe_mt16">
                <div class="col-6">
                    <div class="row">
                        <div class="col-4">
                            <span t-field="signature.signature1"/>
                        </div>
                        <div class="col-1" t-if="signature.signature1">
                            <span style="vertical-align:middle;">:</span>
                        </div>
                        <div class="col-7">

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">

                            <span t-field="signature.signature2"/>

                        </div>
                        <div class="col-1" t-if="signature.signature2">
                            <span style="vertical-align:middle;">:</span>
                        </div>
                        <div class="col-7">

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <span t-field="signature.signature3"/>
                        </div>
                        <div class="col-1" t-if="signature.signature3">
                            <span style="vertical-align:middle;">:</span>
                        </div>
                        <div class="col-7">

                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-12" style="height:50px; width:100%; clear:both;"></div>

                    </div>
                    <div class="row mt-3">
                        <div class="col-12" style="height:50px; width:100%; clear:both;">

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-center">
<!--                        <span style=" font-weight:bold;">For, ACME Electric Switchgear L.L.C</span>-->
                        <span style=" font-weight:bold;">For, <span t-field="o.company_id.name"/> </span>
                            </div>
                    </div>
                </div>
            </div>

        </xpath>

        <!--        endregion-->


        <!--        region SUB-TOTAL,TOTAL BACKGROUND CHANGE-->
        <xpath expr="//table[@class='table table-sm']/tr[@class='border-black o_subtotal']" position="replace">
            <tr class="border-black o_subtotal" style="">
                <td style="border-right:1px solid black;">
                    <span>Subtotal</span>
                </td>
                <td class="text-right">
                    <span t-esc="'{:,.2f}'.format(o.amount_untaxed)"/>
                </td>
            </tr>
        </xpath>
        <xpath expr="//table[@class='table table-sm']/t[@t-as='amount_by_group']" position="replace">
            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                <tr style="border-top:1px solid black;">
                    <!--<t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">-->
                    <t t-if="amount_by_group">
                        <td style="border-top:1px solid black;">
                            <span t-if="amount_by_group" class="text-nowrap"
                                  t-esc="amount_by_group[0].replace(o.currency_id.name, '')"/>
                        </td>
                        <td class="text-right o_price_total" style="border-top:1px solid black;">
                            <span t-if="amount_by_group" class="text-nowrap"
                                  t-esc="amount_by_group[3].replace(o.currency_id.name, '')"/>
                        </td>
                    </t>
                    <t t-else="">
                        <td>
                            <span t-if="amount_by_group" t-esc="amount_by_group[0]"/>
                            <span t-if="amount_by_group" class="text-nowrap">on
                                <t t-esc="amount_by_group[4]"/>
                            </span>
                        </td>
                        <td class="text-right o_price_total">
                            <span t-if="amount_by_group" class="text-nowrap"
                                  t-esc="amount_by_group[3].replace(o.currency_id.name, '')"/>
                        </td>
                    </t>
                </tr>
            </t>

        </xpath>
        <xpath expr="//table[@class='table table-sm']/tr[@class='border-black o_total']" position="replace">
            <tr>
                <td style="background-color:#def4fa;color:black;border-top:1px solid black;border-bottom:1px solid black;border-right:1px solid black;">
                    <span>Total</span>
                </td>
                <td style="background-color:#def4fa;color:black;border-top:1px solid black;border-bottom:1px solid black;"
                    class="text-right">
                    <span class="text-nowrap" t-esc="'{:,.2f}'.format(o.amount_total)"/>
                </td>
            </tr>
        </xpath>
        <!--        endregion-->

        <!--        region AMOUNT DUE BACKGROUND CHANGE-->
        <xpath expr="//table[@class='table table-sm']/t[@t-if='print_with_payments']/t/t[3]/tr" position="replace">
            <tr>
                <td style="background-color:#def4fa;color:black;;border-top:1px solid black;border-right:1px solid black;">
                    <span>Amount Due</span>
                </td>
                <td style="background-color:#def4fa;color:black;border-top:1px solid black;" class="text-right">
                    <span class="text-nowrap" t-esc="'{:,.2f}'.format(o.amount_residual)"/>
                </td>
            </tr>
        </xpath>
        <!--        endregion-->



    </template>
     <!--  region Item Code-->
