<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_slip_acme" inherit_id="cpabooks_delivery_slip.report_delivery_document_custom">
<!--            Manual DO-->
        <xpath expr="//h5" position="replace">
            <h5 class="text-center" style="margin-top:-8px;font-size:18px;">
                        <strong t-if="o.picking_type_id.code=='outgoing'">DO No: </strong>
                        <strong t-if="o.picking_type_id.code=='incoming'">GRN Number: </strong>
                        <span t-if="o.print_manual_dn==False" t-field="o.name"/>
                        <span t-if="o.print_manual_dn==True" t-field="o.manual_dn"/>
                    </h5>
        </xpath>
<!--            Manual DO-->

<!--        Backorder off for acme from delivery report-->
            <xpath expr="//t[@t-if='o.backorder_ids and backorders']" position="replace">

            </xpath>
<!--        Backorder off for acme from delivery report-->
            <xpath expr="//div[@name='customer_address']/div[1]" position="replace">
                <div class="col-6 font-weight-bold">
                            <strong>Customer: </strong>
                            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                            <div t-esc="partner" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>

                </div>

            </xpath>
         <xpath expr="//div[@name='customer_address']/div[2]" position="attributes">
            <attribute name="class">col-6 mt-5</attribute>
<!--            <attribute name="style">vertical-align: middle;</attribute>-->
        </xpath>
            <xpath expr="//div[@name='customer_address']/div[2]" position="inside">
<!--                <div class="col-6">-->

                           <div t-if="o.lpo_number"> <strong>LPO: </strong><span t-esc="o.lpo_number"/> </div>
<!--                           <div t-if="o.project_id.name"> <strong>Project/Job: </strong><span t-esc="o.project_id.name"/> </div>-->

<!--                </div>-->
            </xpath>

            <xpath expr="//div[@name='div_sched_date']/strong"  position="replace">
                <strong>Delivery Date:</strong>
            </xpath>

<!--region if not DONE-->

            <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_sr_no']" position="attributes">
                <attribute name="class">w-5</attribute>
            </xpath>
             <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_sr_no']" position="after">
                 <th name="th_sm_product" class="text-center w-10"><strong>Product</strong></th>

            </xpath>

            <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_product_desc']" position="after">
                <th name="th_sm_product" class="text-center w-10"><strong>unit</strong></th>
            </xpath>
           <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_product_desc']" position="replace">
                 <th name="th_sm_product_desc" class="text-center w-40"><strong>Description</strong></th>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_quantity']" position="replace">
                 <th name="th_sm_quantity" class="text-center w-10"><strong>QTY</strong></th>
                 <th name="th_sm_remarks" class="text-center w-25" ><strong>Remarks</strong></th>
            </xpath>

             <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='td_sr_no']" position="attributes">
                <attribute name="class">w-5</attribute>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='td_sr_no']" position="after">
                 <td name="product_name" class="w-10"><span  t-field="move.product_id.name"/></td>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_description']" position="after">
                 <td class="text-center w-10" name="product_uom"><span  t-field="move.product_id.uom_id.name"/></td>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_description']" position="attributes">
                 <attribute name="class">w-40</attribute>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_qty']" position="after">
                <td name="remarks" style="background-color:white;" class="w-25"><span  t-field="move.remarks"/></td>
            </xpath>
             <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_qty']" position="attributes">
               <attribute name="class">w-10</attribute>
            </xpath>


            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_qty']/span[2]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[@name='product_qty']/span[2]" position="attributes">
                <attribute name="class">text-center</attribute>
            </xpath>







<!--endregion-->
