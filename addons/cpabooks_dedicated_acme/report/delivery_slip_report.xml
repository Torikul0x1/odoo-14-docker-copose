     <template id="field_add_in_table_body_aggregate" inherit_id="cpabooks_delivery_slip.stock_report_delivery_aggregated_move_lines_custom">
         <xpath expr="//td[@name='pro_description']" position="after">
             <td name="product_uom" class="text-center"><span t-esc="aggregated_lines[line]['product_uom']"/></td>
         </xpath>
        <xpath expr="//td[@name='sr_no']" position="after">
             <td name="product_name"><span t-esc="aggregated_lines[line]['product_description']"/></td>
        </xpath>

    </template>

      <template id="field_add_in_table_body_aggregate_main" inherit_id="stock.stock_report_delivery_aggregated_move_lines">
         <xpath expr="//td[@name='move_line_aggregated_qty_done']/span[2]" position="attributes">
             <attribute name="style">display:none;</attribute>
         </xpath>
           <xpath expr="//td[@name='move_line_aggregated_qty_done']" position="attributes">
             <attribute name="class">text-center</attribute>
         </xpath>
          <xpath expr="//td[@name='move_line_aggregated_qty_done']" position="after">
              <td name="remarks" style="background-color:white"><span t-esc="aggregated_lines[line]['product_remarks']"/></td>
         </xpath>



    </template>
