<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- This XML code represents Odoo server actions for the activity cancel, done.-->
    <data>
        <!-- Server action to Cancel activity -->
        <record id="activity_cancel" model="ir.actions.server">
            <field name="name">Cancel</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="binding_model_id" ref="mail.model_mail_activity"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for record in records:
                        record.activity_cancel()
            </field>
        </record>

        <!-- Server action to mark activity as done -->
        <record id="activity_done" model="ir.actions.server">
            <field name="name">Mark As Done</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="binding_model_id" ref="mail.model_mail_activity"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for record in records:
                        record.activity_done()
            </field>
        </record>

        <!-- Client action for Dashboard -->
        <record id="activity_action_dashboard_main" model="ir.actions.client">
            <field name="name">Dashboard</field>
            <field name="tag">activity_dashboard</field>
            <field name="res_model">activity.tag</field>
            <field name="target">current</field>
        </record>

        <!-- Menu item for the Dashboard -->
<!--        <menuitem id="menu_activity_dashboard"-->
<!--                  name="Dashboard"-->
<!--                  sequence="100"-->
<!--                  action="all_in_one_schedule_activity_management.activity_action_dashboard_main"-->
<!--                  parent="all_in_one_schedule_management_root"/>-->
    </data>
</odoo>
