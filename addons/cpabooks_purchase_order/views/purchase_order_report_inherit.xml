<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_order_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//thead//th[@name='th_date_req']" position="replace"></xpath>
        <xpath expr="//span[@t-field='line.date_planned']" position="replace"></xpath>


        <xpath expr="//t/div[hasclass('page')]/table/thead/tr/th[1]" position="before">
            <th name="th_line_no" class="text-center">Sl No.</th>
        </xpath>
        <xpath expr="//t/div[hasclass('page')]/table/tbody/t/tr/t/td[1]" position="before">
            <td name="td_line_no" class="text-center">
                <span t-field="line.line_no"/>
            </td>
        </xpath>


        <xpath expr="//div[@class='page']" position="after">
            <table style="border: none;font-size:12px;margin-top: 50px">
                <tr>
                    <th style="line-height: 1.6;" width="100%">
                        <br/>
                        ...................................................................
                        <br/>
                        <strong>Prepared By</strong>
                    </th>
                    <th style="text-align:right" width="100%">
                        <br/>
                        ...................................................................
                        <br/>
                        <strong>Approved By</strong>
                    </th>
                </tr>
            </table>
            <table style="border: none;font-size:12px;margin-top: 50px">
                <tr>
                    <th style="line-height: 1.6;" width="100%">
                        <br/>
                        ...................................................................
                        <br/>
                        <strong>Receiver Signature</strong>
                    </th>
                </tr>
            </table>
        </xpath>
    </template>
</odoo>
