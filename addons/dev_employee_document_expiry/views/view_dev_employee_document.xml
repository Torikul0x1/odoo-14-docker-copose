<odoo>
    <record id="form_dev_employee_document" model="ir.ui.view">
        <field name="name">form.dev.employee.document</field>
        <field name="model">dev.employee.document</field>

        <field name="arch" type="xml">
            <form string="Employee Document Form">
                <sheet>
                    <h2>
                        <field name="document_sequence"/>
                    </h2>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="document" filename="document_name" widget="image"/>
                            <!--<field name="document" widget="image"/>--> <!--  class="oe_avatar"-->
                            <field name="document_name"/>
                            <field name="date_issue"/>
                            <field name="date_expiry"/>
                            <field name="current_date"/>
                            <field name="days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_dev_employee_document" model="ir.ui.view">
        <field name="name">tree.dev.employee.document</field>
        <field name="model">dev.employee.document</field>
        <field name="arch" type="xml">
            <tree decoration-danger="current_date&gt;date_expiry" string="Employee Document">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_issue"/>
                <field name="date_expiry"/>
                <field name="document"/>
                <field name="current_date"/>
                <field name="days" string="Days Pending"/>

            </tree>
        </field>
    </record>


    <record id="dev_employee_document_filter" model="ir.ui.view">
        <field name="name">dev.employee.document.search</field>
        <field name="model">dev.employee.document</field>
        <field name="arch" type="xml">
            <search string="Employees">
                <field name="name" string="Name"/>
                <group expand="0" string="Group By">
                    <filter name="employee" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter name="expiry" string="Expiry" domain="[('date_expiry','&lt;',current_date)]"
                            context="{'group_by':'date_expiry'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_dev_employee_document" model="ir.actions.act_window">
        <field name="name">Employee Document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dev.employee.document</field>
        <field name="view_mode">tree,form</field>

        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Employee Document...
            </p>
        </field>
    </record>

    <menuitem id="dev_employee_document_main" name="Employee Document" parent="hr.menu_hr_root" sequence="5"/>
    <menuitem id="dev_employee_document_menu" name="Employee Document" parent="dev_employee_document_main"
              action="action_dev_employee_document"/>
</odoo>
