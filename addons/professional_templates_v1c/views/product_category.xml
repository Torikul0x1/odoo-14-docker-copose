<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<!--PRODUCT CATEGORY FORM VIEW INHERIT-->
		<record id="product_category_form_view_inherit" model="ir.ui.view">
			<field name="name">product.category.form.view.inherit</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="product.product_category_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet" position="inside">
					<notebook>
						<page name="product_setup" string="Code Setup">
							<group>
								<group>
									<field name="code_active" widget="boolean_toggle"/>
									<field name="code_prefix"/>
									<field name="code_padding"/>
									<field name="code_start"/>
									<field name="code_step" invisible="1"/>
									<field name="code_next"/>
								</group>
							</group>
						</page>
					</notebook>
				</xpath>
			</field>
		</record>
		
		<!--PRODUCT CATEGORY LIST VIEW-->
		<record id="product_category_list_view_inherit" model="ir.ui.view">
			<field name="name">product.category.list.view.inherit</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="product.product_category_list_view"/>
			<field name="arch" type="xml">
				<xpath expr="//tree" position="inside">
					<header>
						<button name="action_active_all" type="object" string="Active All" class="oe_highlight"/>
					</header>
					<field name="code_active" widget="boolean_toggle"/>
					<field name="code_prefix"/>
					<field name="code_padding"/>
					<field name="product_count"/>
					<field name="code_step" invisible="1"/>
					<field name="code_next"/>
					<field name="code_last"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>