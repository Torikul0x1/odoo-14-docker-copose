    <record id="signature_setup_form" model="ir.ui.view">
        <field name="name">signature.setup.form</field>
        <field name="model">signature.setup</field>
        <field name="arch" type="xml">
            <form string="Signature Setup">

                <sheet>

                    <group>
                        <group>
                            <field name="model"/>

                        </group>
                        <group></group>
                        <group></group>

                    </group>
                    <group>
                        <group>
                            <field name="signature1"/>

                        </group>
                        <group>
                            <field name="signature2"/>
                        </group>
                        <group>
                            <field name="signature3"/>
                            <field name="company_id"/>
                        </group>
                    </group>


                </sheet>
                <!--                <footer>-->
                <!--                    <button type="object" name="read_file" string="Create COA"/>-->
                <!--                </footer>-->
            </form>
        </field>
    </record>

    <record id="signature_setup_tree" model="ir.ui.view">
        <field name="name">signature.setup.tree</field>
        <field name="model">signature.setup</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <header>
                    <button type="object" name="create_default_signature_setup" string="Reset Default Signature"
                            class="oe_highlight"/>
                </header>
                <field name="model"/>
                <field name="signature1"/>
                <field name="signature2"/>
                <field name="signature3"/>
                <field name="company_id"/>
            </tree>

        </field>
    </record>


    <record id="signature_setup_action" model="ir.actions.act_window">
        <field name="name">Signature Setup</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">signature.setup</field>
<!--        <field name="domain">[('company_id', '=', user.company_id.id)]</field>-->
        <field name="view_mode">tree</field>
    </record>


    <menuitem id="menu_signature_setup" name="Signature Setup"
              parent="base.menu_users" action="signature_setup_action" sequence="5" groups="base.group_system"/>

</odoo>
