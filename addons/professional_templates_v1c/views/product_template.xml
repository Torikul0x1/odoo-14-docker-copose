<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!--PRODUCT TEMPLATE LIST VIEW INHERIT-->
	<record id="product_template_list_view" model="ir.ui.view">
		<field name="name">product.template.list.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
			<xpath expr="//tree" position="inside">
				<header>
					<button name="action_reset_item_code" type="object" string="Reset Item Code" class="mb-1 ms-1 oe_highlight"/>
				</header>
			</xpath>
		</field>
	</record>
	
    <record id="view_product_template_form_extend" model="ir.ui.view">
        <field name="name">view.product.template.form.extend</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="system_admin" invisible="1"/>
            </field>
            <xpath expr="//field[@name='uom_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('id','!=',False),('system_admin','=',False)]}</attribute>
                <attribute name="options">{'no_open':True}</attribute>

            </xpath>

<!--            <xpath expr="//field[@name='item_code']" position="after">-->
<!--                <field name="item_code_old"/>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='uom_po_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('id','!=',False),('system_admin','=',False)]}</attribute>
                <attribute name="options">{'no_open':True}</attribute>

            </xpath>
            <!--            <xpath expr="//page[@name='variants']" position="attributes">-->
            <!--                <attribute name="groups"></attribute>-->
            <!--            </xpath>-->
        </field>
    </record>

    <record id="view_product_template_inherit_gp" model="ir.ui.view">
        <field name="name">product.template.form.inherit.gp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <label class="oe_edit_only" for="prod_description" string="Product Description"/>
                <h1>
                    <field name="prod_description" placeholder="Product Description"/>
                </h1>
            </xpath>
<!--            <xpath expr="//field[@name='item_code']" position="after">-->
<!--                    <field name="item_code_old" />-->
<!--            </xpath>-->
        </field>
    </record>


    <record id="view_product_product_form_extend" model="ir.ui.view">
        <field name="name">view.product.product.form.extend</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('id','!=',False)]}</attribute>
                <attribute name="options">{'no_open':True}</attribute>

            </xpath>
            <xpath expr="//field[@name='uom_po_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('id','!=',False)]}</attribute>
                <attribute name="options">{'no_open':True}</attribute>

            </xpath>
        </field>
    </record>
</odoo>

