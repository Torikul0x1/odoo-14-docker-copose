            <div class="header col-12 float-left"
                 t-attf-style="padding-left:0px; padding-right:0px; color:{{style.text_color}};font-size:{{int(style.header_font)}}px;font-family:{{style.font_family}};border-bottom:{{'1px solid ' + style.theme_color if style.header else ''}}">
                <t t-if="company.header_logo">
                    <div class="text-center" style="margin-top: 8px;">
                        <span t-field="company.header_logo"
                              t-options="{'widget': 'image', 'style': 'max-width: 1280px; max-height: 200px;'}"/>
                    </div>
                </t>
                <t t-else="">
                    <t t-if="style.header">
                        <div class="col-4 float-left" style="padding-left:0px;margin-top: 8px;margin-bottom:8px;">
                            <span t-if="style.logo">
                                <span itemprop="image" t-field="style.logo"
                                      t-options="{'widget': 'image', 'style': 'max-width: 300px; max-height: 140px;'}"/>

                            </span>
                            <span t-if="not style.logo and company.logo">
                                <span itemprop="image" t-field="company.logo"
                                      t-options='{"widget": "image", "style": "float:right;max-width: 300px; max-height: 140px;"}'/>
                            </span>
                            <span t-if="not style.logo and not company.logo">
                                <span itemprop="image" t-field="company.logo"
                                      t-options='{"widget": "image", "style": "float:right;max-width: 300px; max-height: 140px;"}'/>
                            </span>
                        </div>
                        <!--                    <div class="col-4 text-center" style="padding-left:0px;">-->
                        <!--                        <h4 t-field="o.project_title" t-attf-style="background-color:{{style.theme_color}};color:{{style.theme_txt_color}};"/>-->
                        <!--                    </div>-->
                        <div class="col-4 mb8 float-right" style="padding-bottom:2px;padding-right:0px;">
                            <div class="float-right" style="width:auto;padding-left:15px;padding-top:20px;">
                                <t t-call="professional_templates_v1c.company_address"/>
                            </div>
                        </div>
                    </t>
                </t>
            </div>
            <!--end of Header-->
            <!-- START OF PAGE -->
            <div class="article page"
                 t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.body_font)}}px !important;font-family:{{style.font_family}} !important;">
                <div t-attf-style="border:1px solid {{style.text_color}}" class="col-12 text-center my-2 p-2">
                    <h3>
                        DELIVERY NOTE
                    </h3>
                    <span t-field="o.name"/>
                </div>
                <div class="col-12"
                     t-attf-style="white-space:pre-line;color:#{style.wm_color};left:#{style.leftpadding}mm; top:#{style.toppadding}mm;font-size:#{style.fontsize}px; opacity:#{style.opacity};z-index:-99; -webkit-transform:rotate(-#{style.rotate}deg);position:fixed;">
                    <t t-esc="style.wm_eval(o, time, user, res_company)"/>
                </div>
                <!--            <div class="col-6 float-left" style="padding-left:0px; padding-right:0px;">-->
                <!--                <div t-attf-style="float:left; width:100%; margin-top:0px;padding-top:0px;padding-left:15px;padding-right:15px;-->
                <!--                    color:{{style.text_color}} !important; border:1px solid {{style.text_color}}">-->
                <!--                    <h4 id="title" style="margin-top:10px;white-space:nowrap;">-->
                <!--                        <span>Delivery Note</span>-->
                <!--                        <span t-field="o.name"/>-->
                <!--                    </h4>-->
                <!--                </div>-->
                <!--            </div>-->
                <div class="col-5 float-right"
                     style="border: 1px solid; page-break-inside: avoid !important;padding:15px;">
                    <strong t-attf-style="font-size:{{int(style.body_font)+6}}px;">
                        <span class="fa fa-truck"/>
                        Delivery address:
                    </strong>
                    <!--                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">-->
                    <!--                        <div>-->
                    <!--                            <div t-field="o.move_lines[0].partner_id" style="margin-bottom:0px;"-->
                    <!--                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", ], "no_marker": true}'/>-->
                    <!--                        </div>-->
                    <!--                    </div>-->
                    <!--                    <div t-if="(o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id == o.partner_id.id) or o.move_lines and not o.move_lines[0].partner_id">-->
                    <!--                        <div t-field="o.partner_id" style="margin-bottom:0px;"-->
                    <!--                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", ], "no_marker": true}'/>-->
                    <!--                    </div>-->
                    <div t-if="o.partner_id"
                         t-attf-style="font-size:{{int(style.body_font)+6}}px;color:{{style.cust_color}};margin-left:0px;">
                        <t t-if="o.partner_id.parent_id">
                            <span t-field="o.partner_id.parent_id"/>,
                            <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>
                            <span t-field="o.partner_id.name"/>
                        </t>
                        <t t-if="not o.partner_id.parent_id">
                            <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>
                            <span t-field="o.partner_id"/>
                        </t>

                    </div>
                    <div t-field="o.partner_id" style="margin-bottom:0px;"
                         t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"]}'/>
                    <span t-if="o.partner_id.vat">VAT:
                        <span t-field="o.partner_id.vat"/>
                    </span>
                </div>
                <div class="col-6 float-left" style="padding:4px;"/> <!--spacing-->
                <div class="col-6 float-left" t-attf-style="border: 1px solid {{style.text_color}};padding:15px;">
                    <!--                    <div t-if="o.partner_id"-->
                    <!--                         t-attf-style="font-size:{{int(style.body_font)+6}}px;color:{{style.cust_color}};margin-left:0px;">-->
                    <!--                        <t t-if="o.partner_id.parent_id">-->
                    <!--                            <span t-field="o.partner_id.parent_id"/>,-->
                    <!--                            <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>-->
                    <!--                            <span t-field="o.partner_id.name"/>-->
                    <!--                        </t>-->
                    <!--                        <t t-if="not o.partner_id.parent_id">-->
                    <!--                            <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>-->
                    <!--                            <span t-field="o.partner_id"/>-->
                    <!--                        </t>-->

                    <!--                    </div>-->
                    <!--                    <div t-field="o.partner_id" style="margin-bottom:0px;"-->
                    <!--                         t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"]}'/>-->
                    <!--                    <span t-if="o.partner_id.vat">VAT:-->
                    <!--                        <span t-field="o.partner_id.vat"/>-->
                    <!--                    </span>-->
                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                        <div>
                            <div t-field="o.move_lines[0].partner_id" style="margin-bottom:0px;"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", ], "no_marker": true}'/>
                        </div>
                    </div>
                    <div t-if="(o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id == o.partner_id.id) or o.move_lines and not o.move_lines[0].partner_id">
                        <div t-field="o.partner_id" style="margin-bottom:0px;"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", ], "no_marker": true}'/>
                    </div>
                </div>
                <div class="col-12 float-left" style="padding:4px;"/> <!--spacing-->

                <div class="col-12 float-left" style="padding-top:8px; padding-bottom:0px; border:1px solid;">
                    <t t-set="div_style" t-value="'padding-left:8px; padding-right:8px; width:auto;
                float:left; margin-right:15px;'"></t>

                    <div t-if="o.picking_type_id" t-attf-style="{{div_style}}">
                        <strong style="white-space:nowrap;">Order (Origin):</strong>
                        <p style="white-space:nowrap;" t-field="o.picking_type_id"/>
                    </div>
                    <t t-set="cust_ref" t-value="o.get_ref()"/>
                    <div t-if="cust_ref" t-attf-style="{{div_style}}">
                        <strong style="white-space:nowrap;">Customer Ref:</strong>
                        <p style="white-space:nowrap;" t-esc="cust_ref"/>
                    </div>
                    <div t-if="o.sudo().sale_id.client_order_ref" t-attf-style="{{div_style}}">
                        <strong style="white-space:nowrap;">Customer Reference:</strong>
                        <p style="white-space:nowrap;" t-field="o.sudo().sale_id.client_order_ref"/>
                    </div>
                    <div id="div_sched_date" t-if="o.scheduled_date" t-attf-style="{{div_style}}">
                        <strong style="white-space:nowrap;">Delivery Date:</strong>
                        <p style="white-space:nowrap;" t-field="o.scheduled_date"/>
                    </div>
                    <div id="div_sched_date" t-if="o.po_no" t-attf-style="{{div_style}}">
                        <strong style="white-space:nowrap;">PO No:</strong>
                        <p style="white-space:nowrap;" t-field="o.po_no"/>
                    </div>
                </div>
                <div class="col-12 float-left" style="padding:4px;"/> <!--spacing-->
                <!-- DATA-->
                <t t-call="professional_templates_v1c.delivery_lines"/>
                <!--/DATA-->
                <!--Signature and Disclaimer-->
                <t t-set="signature" t-value="o.get_signature()"/>

                <div t-if="signature" class="row oe_mt64" style="top:10px" name="signature">
                    <div t-if="o.prepared_by_id" style="" class="col-4 text-left  position-relative">
                        <div style="float:left" class="w-100 text-left">
                            <img style="width:200px;" t-if="o.prepared_by_id.user_signature"
                                 t-att-src="image_data_uri(o.prepared_by_id.user_signature)"
                                 alt="Signature"/>

                        </div>
                        <div style="float:left;  bottom:0px" class="w-100 text-left position-absolute ">
                            <strong style="text-decoration:overline;">
                                <span t-field="signature.signature1"/>
                                <b>
                                    <span t-field="o.prepared_by_id.name"/>
                                </b>
                            </strong>
                        </div>
                    </div>
                    <div class="col-4 text-center">
                        <div class="col-12 position-absolute">
                            <img style="width:6cm;" t-if="o.stamp"
                                 t-att-src="image_data_uri(o.stamp)"
                                 class="rounded" alt="Stamp"/>
                        </div>
                    </div>
                    <div t-if="o.Approved_by_id" class="col-4 text-right  position-relative">

                        <div style="float:right" class="w-100">
                            <img style="width:200px;" t-if="o.Approved_by_id.user_signature"
                                 t-att-src="image_data_uri(o.Approved_by_id.user_signature)"
                                 alt="Signature"/>

                        </div>
                        <div style="float:right;  bottom:0px" class="w-100 text-center position-absolute ">
                            <strong style="text-decoration:overline;">
                                <span class="border" t-field="signature.signature3"/>
                                <b>
                                    <span class="border" t-field="o.Approved_by_id.name"/>
                                </b>
                            </strong>
                        </div>
                    </div>
                </div>

                <div t-if="o.disclaimer" style="page-break-inside: avoid; margin-top: 128px;">
                    <strong>Disclaimer</strong>
                    <br/>
                    <span t-field="o.disclaimer"/>
                </div>
                <!--Signature and Disclaimer-->
            </div><!--End of PAGE-->
            <!--FOOTER -->
            <div class="footer"
                 t-attf-style="font-size:{{style.footer_font}}px !important;font-family:{{style.font_family}} !important;">
                <t t-call="professional_templates_v1c.company_footer"/>
            </div>
            <!--/FOOTER-->

        </template>
    </data>
</odoo>
