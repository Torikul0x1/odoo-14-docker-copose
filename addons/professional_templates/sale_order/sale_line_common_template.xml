<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sales_lines_common_template">
            <div t-if="doc.project_title and style.template_inv.key !='professional_templates.INVOICE_13_document'"
                 class="col-12"
                 t-attf-style="color:{{style.theme_txt_color if not style.transparent else style.text_color}};text-align:center; padding-left:0px; padding-right:0px;">
                <div t-attf-style="width:auto; display:inline-block; background-color:{{style.theme_color if not style.transparent else 'transparent'}};padding-left:8px; padding-right:8px;">
                    <span t-attf-style="margin-top:8px; margin-bottom:8px;font-size:{{int(style.body_font)+4}}px;">
                        <span t-field="doc.project_title"/>
                    </span>
                </div>
            </div>
            <div class="col-12 float-left" style="padding:8px;"/>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
            <!-- Is there tax in at least one line? -->
            <t t-set="display_taxes" t-value="any([y.tax_id for y in doc.order_line])"/>
            <!-- to take care of columns when no discount -->
            <t t-set="col_span" t-value="8 if display_discount else 7"/>
            <div name="subject" t-attf-style="margin-bottom:15px !important;">
                <strong style="white-space:nowrap;">Subject:</strong>
                <b><span t-field="doc.subject"/></b>
            </div>
            <div name="greeting_note" t-if="doc.greeting_note and doc.show_greeting_note" t-attf-style="font-size:15px !important;">
<!--                <strong style="white-space:nowrap;">Subject:</strong>-->
                <span t-field="doc.greeting_note"/>
            </div>
            <table t-attf-class="table  table-sm" t-attf-style="color:{{style.text_color}};" name="invoice_line_table">
                <thead t-attf-style="color:{{style.theme_txt_color if not style.transparent else style.text_color}};">
                    <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"></t>
                    <!--                    {{background_clr if not style.transparent else 'transparent'}}-->
                    <tr t-attf-style="background-color:{{background_clr}};font-size:{{int(style.body_font)+2}}px;">
                        <th name="count_th" t-attf-style="{{th_style}}">
                            <i class="fa fa-list-ol" t-if="not style.is_icon_hide"/>
                        </th>
                        <th name="image_th" t-if="style.show_img" t-attf-style="{{th_style}}">
                            <i class="fa fa-camera" t-if="not style.is_icon_hide"/>
                            Image
                        </th>
                        <th name="description_th" t-attf-style="{{th_style}}"><i class="fa fa-th-large" t-if="not style.is_icon_hide"/> Description <br></br>
                        </th>
                        <th name="qty_th" class="text-right" t-attf-style="{{th_style}}">
                            <i class="fa fa-sort-amount-asc" t-if="not style.is_icon_hide"/>
                            Qty <br></br>
                        </th>
                        <!--                        <th name="th_unit" class="text-center"><strong>Units</strong></th>-->
                        <!--                        <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Units</th>-->
                        <th name="unit_price_th" class="text-center" t-attf-style="{{th_style}}">Unit
                            <br/>
                            <span>Price</span>
                        </th>
                        <th name="total_amount_th" class="text-center" t-attf-style="{{th_style}}">Amount <br/><span>Excl. Tax</span>
                        </th>
                        <th name="own_discount_th" t-if="display_discount" class="text-right"
                            t-attf-style="{{th_style}}"
                            groups="product.group_discount_per_so_line">Discount(%)
                        </th>
                        <th name="tax_th" t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}">Tax %
                        </th>
                        <th name="tax_amount_th" t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}">
                            Tax
                            <br/>
                            <span>Amount</span>
                        </th>
                        <th name="amnt_incl_amount_th" class="text-right" t-attf-style="{{th_style}}" t-if="display_taxes">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount
                                <br/>
                                <span>Incl. Tax</span>
                            </span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total
                                <br/>
                                <span>Price</span>
                            </span>
                        </th>
                    </tr>
                </thead>
                <tbody t-attf-style="color:{{style.text_color}};">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="total_tax" t-value="0"/>
                    <t t-set="item_count" t-value="0"/>
                    <t t-set="tax_amount" t-value="0"/>
                    <t t-set="total_amt" t-value="0"/>
                    <!--                    <t t-set="total_taxable_amt" t-value="0"/>-->
                    <t t-set="total_tax_amt" t-value="0"/>
                    <t t-set="total_amntincltax_amt" t-value="0"/>
                    <t t-set="after_discount_amount" t-value="0"/>
                    <t t-foreach="doc.order_line" t-as="l">
                        <t t-set="total_amt" t-value="total_amt+(l.product_uom_qty*l.price_unit)"/>
                        <t t-set="item_count" t-value="item_count + 1"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + l.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + l.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>
                        <tr t-attf-style="background-color:{{style.odd if (l_parity in 'odd' and not style.transparent) else (not style.transparent and style.even)  or 'transparent'}};">
                            <!--                            page-break-inside: avoid-->
                            <t t-if="not l.display_type" name="sale_line">

                                <t t-set="check_tax_included_or_excluded" t-value="l.check_tax_type()"/>
                                <t t-set="tax_amount" t-value="l.calculate_tax_amt()"/>
                                <!--                                <t t-set="tax_amount" t-value="0"/>-->
                                <t t-set="total_tax_amt" t-value="total_tax_amt+tax_amount"/>
                                <t t-if="not check_tax_included_or_excluded" t-set="unit_price" t-value="l.price_unit"/>
                                <t t-else="" t-set="unit_price" t-value="l.price_unit-(tax_amount/l.product_uom_qty)"/>


                                <td name="count_td">
                                    <span t-esc="item_count"/>
                                </td>
                                <td name="image_td" t-if="style.show_img">
                                    <span t-if="l.sudo().product_id.image_128" itemprop="image"
                                          t-field="l.sudo().product_id.image_128" t-options='{"widget": "image"}'/>
                                </td>
<!--                                t-attf-style="white-space:nowrap;"-->
                                <td name="description_td">
                                    <span t-field="l.name"/>
                                </td>
                                <td name="uom_td" class="text-right">
                                    <span t-esc="(l.product_uom_qty)"/><!--'%.0f'%-->
                                    <span t-field="l.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td name="price_unit_td"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
<!--                                    <span  t-field="l.price_unit"/>-->
                                    <span  t-esc="'%.2f'% unit_price"/>

                                    <!--                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"-->
                                </td>
                                <t t-set="total_price" t-value="l.product_uom_qty*l.price_unit"/>
                                <td name="total_price_td"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="'%.2f'%(total_price)"/>
                                    <!--                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"-->
                                </td>
                                <td name="own_discount_td" t-if="display_discount"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                    groups="product.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>

                                <td name="tax_td" t-if="display_taxes"
                                    t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="', '.join(map(lambda x: (x.description.replace('vat', '').replace('VAT', '').replace('Vat', '') if 'vat' in x.description.lower() else x.description), l.tax_id))"/>
                                </td>

                                <td name="tax_amount_td" t-if="display_taxes"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="'%.2f'%(tax_amount)"/>
                                    <!--                                    tax_amount-->
                                </td>
                                <t t-set="after_discount_amount" t-value="l.get_after_discount_amt()"/>
                                <!--                                <t t-set="after_discount_amount" t-value="0"/>-->
                                <t t-if="not check_tax_included_or_excluded" t-set="price_subtotal" t-value="after_discount_amount+tax_amount"/>
                                <t t-else="" t-set="price_subtotal" t-value="l.price_subtotal+tax_amount"/>

                                <t t-if="not check_tax_included_or_excluded" t-set="total_amntincltax_amt" t-value="total_amntincltax_amt+price_subtotal"/>
                                <t t-else="" t-set="total_amntincltax_amt" t-value="total_amntincltax_amt+l.price_subtotal+tax_amount"/>
                                <td name="price_subtotal_td" class="text-right" t-if="display_taxes">
                                    <!--                                    <span t-field="l.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>-->
                                    <span t-esc="price_subtotal"
                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="l.price_total"
                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                          groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="l.display_type == 'line_section'">
                                <td name="section_name_td" t-att-colspan="col_span">
                                    <span t-field="l.name"/>
                                </td>
                                <t t-set="current_section" t-value="l"/>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="item_count" t-value="0"/>
                            </t>
                            <t t-if="l.display_type == 'line_note'">
                                <td name="line_note_td" t-att-colspan="col_span">
                                    <span t-field="l.name"/>
                                </td>
                                <t t-set="item_count" t-value="item_count - 1"/>
                            </t>
                        </tr>
                        <t t-if="current_section and (l_last or doc.order_line[l_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td t-att-colspan="col_span">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                    <tr name="subtotal_row" t-attf-style="{{style.text_color}};background-color:#d3d3d3;">

                        <td name="subtotal_row_subtotal_td" t-if="not style.show_img" colspan="4" align="right"
                            style="font-weight:bold;">
                            <strong>Sub Total</strong>
                        </td>
                        <td name="subtotal_row_subtotal_td" t-if="style.show_img" colspan="5" align="right">
                            <strong>Sub Total</strong>
                        </td>
                        <td name="subtotal_row_total_amount_td" align="right" style="font-weight:bold;">
                            <span t-esc="'%.2f'%(total_amt)"/>
                        </td>
                        <!--                        <td name="subtotal_row_tax_percent_td" t-if="total_tax_amt>0"></td>-->
                        <td name="subtotal_row_tax_percent_td" t-if="display_taxes"></td>
                        <!--                        <td name="subtotal_row_total_tax_amt_td" align="right" style="font-weight:bold;" t-if="total_tax_amt>0"><span t-esc="'%.2f'%(total_tax_amt)"/> </td>-->
                        <td name="subtotal_row_total_tax_amt_td" t-if="display_taxes" align="right"
                            style="font-weight:bold;">
                            <span t-esc="'%.2f'%(total_tax_amt)"/>
                        </td>
                        <td name="subtotal_row_total_amntincltax_amt_td" align="right" style="font-weight:bold;" t-if="display_taxes">
                            <span t-esc="total_amntincltax_amt"
                                  t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row" style="page-break-inside: avoid;">
                <div t-if="style.aiw_report" class="col-7 float-left">
                    <!--                page-break-inside: avoid;-->
                    <p>
<!--                        <strong>Amount in Words:</strong>-->
<!--                        <span style="text-decoration:underline;" t-field="doc.amount_words"/>-->
                        <strong>Amount In Words: </strong> <span t-field="doc.num_word"/> <span> Only.</span>
                    </p>
                </div>
                <div class="col-5 float-right" id="total">
                    <table class="table table-sm" t-attf-style="color:{{style.text_color}} !important;">
                        <!--                    <tr class="border-black">-->
                        <tr name="sm_total_amount_tr" class="border-black">
                            <td>
                                <strong>Total Amount</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="doc.amount_untaxed"/>
                            </td>
                        </tr>
                        <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                            <tr t-attf-style="border-top: 1px solid {{style.text_color}};">
                                <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                    <td>
                                        <span t-esc="amount_by_group[0]"/>
                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;
                                            <t t-esc="amount_by_group[2]"
                                               t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"
                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td>
                                        <span t-esc="amount_by_group[0]"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"
                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                        <tr name="sm_total_tr" class="border-black">
                            <!--                        <td t-attf-style="border-top: 1px solid {{style.text_color}} !important;"><strong>Total</strong></td>-->
                            <td>
                                <strong>Total</strong>
                            </td>
                            <td class="text-right">
                                <!--                            text-decoration:underline;-->
                                <span style="font-weight:bold;" t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div name="op_div" style="page-break-inside: avoid;" t-if="doc.sale_order_option_ids">
            <h3>Options</h3>
            <table t-attf-class="table  table-sm" t-attf-style="color:{{style.text_color}};" name="optional_line_table">
                <thead t-attf-style="color:{{style.theme_txt_color if not style.transparent else style.text_color}};">
                    <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"></t>
                    <!--                    {{background_clr if not style.transparent else 'transparent'}}-->
                    <tr t-attf-style="background-color:{{background_clr}};font-size:{{int(style.body_font)+2}}px;">
                        <th name="op_count_th" t-attf-style="{{th_style}}">
                            <i class="fa fa-list-ol" t-if="not style.is_icon_hide"/>
                        </th>
                        <th name="op_description_th" t-attf-style="{{th_style}}"><i class="fa fa-th-large" t-if="not style.is_icon_hide"/>Description
                        </th>
<!--                        <th name="qty_th" class="text-right" t-attf-style="{{th_style}}">-->
<!--                            <i class="fa fa-sort-amount-asc" t-if="not style.is_icon_hide"/>-->
<!--                            Qty-->
<!--                        </th>-->
                        <th name="op_unit_price_th" class="text-right" t-attf-style="{{th_style}}">Unit Price
<!--                            <br/>-->
<!--                            <span>Price</span>-->
                        </th>

                    </tr>
                </thead>
                <tbody t-attf-style="color:{{style.text_color}};">
                    <t t-set="item_count" t-value="0"/>
                    <t t-foreach="doc.sale_order_option_ids" t-as="l">
                        <t t-set="item_count" t-value="item_count + 1"/>
                        <t  t-set="unit_price" t-value="l.price_unit"/>
                        <tr t-attf-style="background-color:{{style.odd if (l_parity in 'odd' and not style.transparent) else (not style.transparent and style.even)  or 'transparent'}};">





                                <td name="op_count_td">
                                    <span t-esc="item_count"/>
                                </td>

<!--                                t-attf-style="white-space:nowrap;"-->
                                <td name="op_description_td">
                                    <span t-field="l.name"/>
                                </td>
                                <td name="op_price_unit_td"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span  t-esc="'%.2f'% unit_price"/>
                                </td>

                        </tr>
                    </t>
                </tbody>
            </table>
            </div>


