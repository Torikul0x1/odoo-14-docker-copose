<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="flowchart_kanban_form_view" model="ir.ui.view">
        <field name="name">flowchart.kanban.form.view</field>
        <field name="model">flowchart.kanban</field>
        <field name="arch" type="xml">
            <form string="Flowchart" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="flowchart_kanban_kanban_view" model="ir.ui.view">
        <field name="name">flowchart.kanban.kanban.view</field>
        <field name="model">flowchart.kanban</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" style="width: 100%; background-color: #d3d5db;">
                            <div class="oe_kanban_content">
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-3">
                                        <h3 class="text-info">CUSTOMER/CLIENT</h3>
                                        <div class="mt16">
                                            <button name="%(crm.crm_lead_action_pipeline)d" type="action" string="ENQUIRY (CRM)" class="btn btn-info col-10">
                                                ENQUIRY (CRM)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(sale.action_quotations_with_onboarding)d" type="action" string="QUOTATION (SALES)" class="btn btn-info col-10">
                                                QUOTATION (SALES)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(sale.action_orders)d" type="action" string="LPO CLIENT (SALES)" class="btn btn-info col-10">
                                                LPO CLIENT (SALES)
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <h3 class="text-success">ENGINEERING &amp; PRODUCTION</h3>

                                        <div class="mt16">
                                            <button name="%(documents.document_action)d" type="action" string="DESIGN (DOCUMENTS)" class="btn btn-success col-10">
                                                DESIGN (DOCUMENTS)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(mrp.mrp_bom_form_action)d" type="action" string="BILL OF MATERIAL (MANUFACTURING)" class="btn btn-success col-10">
                                                BILL OF MATERIAL (MANUFACTURING)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(bi_material_purchase_requisitions.action_material_purchase_requisition)d" type="action" string="PURCHASE REQUISITION" class="btn btn-success col-10">
                                                PURCHASE REQUISITION
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(mrp.mrp_production_action)d" type="action" string="MATERIAL ISSUE (MANUFACTURING ORDER)" class="btn btn-success col-10">
                                                MATERIAL ISSUE (MANUFACTURING ORDER)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(quality_control.quality_alert_team_action)d" type="action" string="QUALITY CONTROL/HANDOVER FINISHED PRODUCT TO STORE" class="btn btn-success col-10">
                                                QUALITY CONTROL/HANDOVER FINISHED PRODUCT TO STORE
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <h3 class="text-danger">PURCHASE/STORE</h3>
                                        <div class="mt16">
                                            <button name="%(stock.stock_picking_type_action)d" type="action" string="STOCK CHECKING(INVENTORY)" class="btn btn-danger col-10">
                                                STOCK CHECKING (INVENTORY)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(purchase.purchase_rfq)d" type="action" string="LPO (PURCHASE)" class="btn btn-danger col-10">
                                                LPO (PURCHASE)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="action_stock_picking_incoming" type="object" string="GRN (PURCHASE)" class="btn btn-danger col-10">
                                                GRN (PURCHASE)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="action_stock_picking_outgoing" type="object" string="DELIVERY ORDER" class="btn btn-danger col-10">
                                                DELIVERY ORDER
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <h3 class="text-warning">ACCOUNTING</h3>
                                        <div class="mt16">
                                            <button name="%(account.action_move_out_invoice_type)d" type="action" string="TAX INVOICE (ACCOUNTING)" class="btn btn-warning col-10">
                                                TAX INVOICE (ACCOUNTING)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(account.action_account_payments)d" type="action" string="CUSTOMER PAYMENT RECEIPT (ACCOUNTING)" class="btn btn-warning col-10">
                                                CUSTOMER PAYMENT RECEIPT (ACCOUNTING)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(account.action_move_in_invoice_type)d" type="action" string="BILLS ENTRY (ACCOUNTING)" class="btn btn-warning col-10">
                                                BILLS ENTRY (ACCOUNTING)
                                            </button>
                                        </div>
                                        <div class="mt16">
                                            <button name="%(account.action_account_payments_payable)d" type="action" string="VENDOR PAYMENT (ACCOUNTING)" class="btn btn-warning col-10">
                                                VENDOR PAYMENT (ACCOUNTING)
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_flowchart_kanban" model="ir.actions.act_window">
        <field name="name">Flowchart</field>
        <field name="res_model">flowchart.kanban</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="flowchart_kanban_kanban_view"/>
    </record>

    <menuitem
        id="menu_flowchart_kanban_root"
        name="Flowchart"
        web_icon="cpabooks_switchgear_custom,static/description/icon.png"
        sequence="5"/>

    <menuitem
        id="menu_flowchart_kanban"
        name="Flowchart"
        action="action_flowchart_kanban"
        parent="cpabooks_switchgear_custom.menu_flowchart_kanban_root"
        sequence="1"/>
</odoo>
