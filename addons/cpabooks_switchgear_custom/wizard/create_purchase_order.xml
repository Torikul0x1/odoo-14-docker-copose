<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW  -->

    <record id="view_transientmodel_wizard_form" model="ir.ui.view">
        <field name="name">pr.transient.form</field>
        <field name="model">create.pr</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <p class="oe_grey"> </p>
                <group>
                    <group>
                        <field name="partner_id" />
                    </group>
<!--                    <group>-->
<!--                        <field name="date_order" />-->
<!--                    </group>-->
                </group>
                <group>
                    <field name="new_order_line_ids" nolabel ="1" >
                    <tree editable="bottom" create="false">
                        <field name="product_id" />
                        <field name="name" />
                        <field name="product_qty" />
                        <field name="product_uom" options="{'no_open':True, 'no_create':True, 'no_create_edit':True}" readonly="1" force_save="1"/>
                        <field name="price_unit" />
<!--                        <field name="tax_id" options="{'no_open':True, 'no_create':True, 'no_create_edit':True}" widget="many2many_tags"/>-->
                        <field name="product_subtotal" />
                        <field name="qty_on_hand" optional="hide"/>

                    </tree>
                    </field>
                </group>

                <footer>
                    <button name="action_create_pr" string="Create PR" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- ACTION     -->

    <record id="action_transientmodel_wizard" model="ir.actions.act_window">
        <field name="name">Create PR</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.pr</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>