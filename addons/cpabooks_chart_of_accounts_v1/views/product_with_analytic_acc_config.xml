<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_analytic_acc_config" model="ir.ui.view">
            <field name="name">product.analytic.acc.config</field>
            <field name="model">product.analytic.acc.conf</field>
            <field name="arch" type="xml">
                <form string="Chart of Account"  create="false" edit="false">

                <sheet>

                    <notebook>
                        <page string="Create Vehicle Ledger" name="vehicle_coa">
                            <field name="vehicle_coa">
                                <tree string="Create Vehicle Ledger" editable="bottom">
                                    <field name="vehicle_no"/>
                                    <field name="expense_ledger_id"/>
<!--                                    <field name="analytic_acc_id"/>-->
<!--                                    <field name="analytic_group_id"/>-->
<!--                                    <field name="item_id"/>-->
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Available Vehicle Ledgers" name="created_coa">
<!--                            <field name="created_coa" readonly="1">-->
                            <field name="created_coa">
                                <tree string="Available Vehicle Ledgers" editable="bottom">
                                    <field name="vehicle_no"/>
                                    <field name="expense_ledger_id"/>
                                    <field name="analytic_acc_id"/>
                                    <field name="analytic_group_id"/>
                                    <field name="item_id"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>

                         <page string="Create Visa Product" name="visa_product">
                            <field name="visa_products">
                                <tree string="Create Visa Product" editable="bottom">
                                    <field name="visa_product"/>
                                    <field name="expense_ledger_id" required="1"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Available Visa Products" name="created_visa_products">
                            <field name="created_visa_products">
                                <tree string="Available Visa Products" editable="bottom">
                                    <field name="visa_product"/>
                                    <field name="expense_ledger_id"/>

                                </tree>
                            </field>
                        </page>

                        <page string="Available Visa Analytic Accounts" name="created_visa_ana_acc">
                            <field name="created_visa_ana_acc">
                                <tree string="Available Visa Analytic Accounts" editable="bottom">
                                    <field name="analytic_acc_id"/>
                                    <field name="analytic_group_id"/>
                                    <field name="company_id" invisible="1"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>




                </sheet>
                <footer>
                    <button type="object" name="create_vehicle_coa" string="Create Vehicle Coa" class="btn-primary"/>
                    <button type="object" name="create_visa_coa" string="Create Visa CoA" class="btn-primary"/>
                    <button type="object" name="action_create_default_visa_analytic_acc" string="Update Visa Analytic Account" class="btn-primary"/>
                </footer>
                </form>
            </field>
        </record>


    <record id="vehicle_coa_conf_action" model="ir.actions.act_window">
			<field name="name">Vehicle CoA</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.analytic.acc.conf</field>
			<field name="binding_view_types">form</field>
			<field name="view_mode">form</field>
<!--			<field name="context">{'default_type': 'product', 'pass_default_categ' : True}</field>-->
			<field name="view_id" ref="product_analytic_acc_config"/>
            <field name="target">new</field>
		</record>
</odoo>
