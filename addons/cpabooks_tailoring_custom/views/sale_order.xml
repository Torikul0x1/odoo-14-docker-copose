<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="before">
                <field name="is_create_project" attrs="{'invisible':[('project_id', '!=', False)]}"/>
                <field name="project_id" readonly="1" attrs="{'invisible':[('is_create_project', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>