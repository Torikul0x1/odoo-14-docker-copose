    <menuitem
        id="menu_flowchart_tailor_kanban"
        name="Tailor Flowchart"
        action="action_flowchart_tailor_kanban"
        parent="cpabooks_tailoring_custom.menu_flowchart_tailor_kanban_root"
        sequence="1"/>
</odoo>
