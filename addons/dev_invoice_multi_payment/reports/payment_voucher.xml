<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payment_receipt_document_inherit_dev_invoice_multi" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@t-if='o.payment_method_id']" position="after">
            <div class="col-6" t-if="o.payment_for">
                        <strong>Payment Method: </strong><span t-field="o.payment_for"/>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.payment_method_id']" position="attributes">
            <attribute name="t-attf-style">display:none;</attribute>
        </xpath>
    </template>
</odoo>