<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--INHERIT INVOICE AND BILLS FORM VIEW-->
        <record id="account_move_form_view_inherit" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="after">
                    <button name="acton_launch_multipayment" type="object" string="Multi Payment" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                </xpath>
            </field>
        </record>

        <!--INHERIT INVOICE LIST VIEW-->
        <record id="account_move_out_list_view_inherit" model="ir.ui.view">
            <field name="name">account.move.list.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="acton_launch_multipayment" type="object" string="Multi Payment" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

        <!--INHERIT BILL LIST VIEW-->
        <record id="account_move_in_list_view_inherit" model="ir.ui.view">
            <field name="name">account.move.list.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="acton_launch_multipayment" type="object" string="Multi Payment" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>