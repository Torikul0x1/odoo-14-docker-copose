<odoo>
    <record id="account_paumnet_add_method_of_payment" model="ir.ui.view">
        <field name="name">account.paumnet.add.method.of.paynet</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='action_post']" position="replace">
                <button name="action_post" string="Confirm" type="object" class="oe_highlight"
                        attrs="{'invisible': ['|',('state', '!=', 'draft'),('payment_for','=','multi_payment')]}"/>
                <button name="dev_generate_moves" string="Confirm"
                        type="object" class="oe_highlight"
                        attrs="{'invisible': ['|',('state', '!=', 'draft'),('payment_for','!=','multi_payment')]}"/>
            </xpath>
            <xpath expr="//group//group[@name='group3']//label" position="before">
                <field name="payment_for" attrs="{'readonly':[('state','!=','draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="allocation_amount" attrs="{'invisible':[('payment_for','!=','multi_payment')]}"/>
            </xpath>
            <xpath expr="//group[@name='group2']//field[@name='move_id']" position="replace">
                <field name="move_id" required="0"
                       attrs="{'invisible': ['|',('id', '=', False),('state','=','draft')]}"
                       groups="account.group_account_readonly"/>
            </xpath>
            <xpath expr="//group//group[@name='group3']/field[@name='date']" position="before">
                <field name="woff_amount" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="woff_account"
                       attrs="{'readonly':[('state','!=','draft')],'required':[('woff_amount','!=',0)]}"/>
                <field name="woff_label"
                       attrs="{'readonly':[('state','!=','draft')],'required':[('woff_amount','!=',0)]}"/>
            </xpath>
            <!--        	<xpath expr="//group[@name='payment_difference']" position="replace">-->
            <!--        	    <group name="payment_difference" attrs="{'invisible': ['|',('payment_difference', '=', 0.0),('payment_for','!=',False)]}" groups="account.group_account_user">-->
            <!--                    <label for="payment_difference"/>-->
            <!--                    <div>-->
            <!--                        <field name="payment_difference"/>-->
            <!--                        <field name="payment_difference_handling" widget="radio" nolabel="1"/>-->
            <!--                        <div attrs="{'invisible': [('payment_difference_handling','=','open')]}">-->
            <!--                            <label for="writeoff_account_id" class="oe_edit_only" string="Post Difference In"/>-->
            <!--                            <field name="writeoff_account_id" options="{'no_create': True}" string="Post Difference In" attrs="{'required': [('payment_difference_handling', '=', 'reconcile')]}"/>-->
            <!--                            <label for="writeoff_label" class="oe_edit_only" string="Label"/>-->
            <!--                            <field name="writeoff_label" attrs="{'required': [('payment_difference_handling', '=', 'reconcile')]}"/>-->
            <!--                        </div>-->
            <!--                    </div>-->
            <!--                </group>-->
            <!--        	</xpath>-->
            <xpath expr="//sheet" position="inside">
                <notebook colspan="4"
                          attrs="{'invisible':[('payment_for','not in',['multi_account','multi_payment'])]}">
                    <page string="Payment Item">
                        <group>
                            <group>
                                <button type="object" string='Load Lines' name="load_payment_lines"
                                        attrs="{'invisible':[('state','=','posted')]}" class="oe_highlight"/>
                            </group>
                            <group>
                                <button type="object" string='Remove Lines' name="remove_lines"
                                        attrs="{'invisible':[('state','=','posted')]}" class="oe_highlight"/>
                            </group>
                        </group>

                        <field name="adv_line_ids" nolabel="1"
                               attrs="{'readonly':[('state','!=','draft')],'invisible':[('payment_for','!=','multi_payment')]}">
                            <tree editable="bottom">
                                <field name="full_reconclle" string=" "/>
                                <field name="invoice_id"/>
                                <field name="project_id"/>
                                <field name="project_short_form" invisible="1"/>
                                <field name="account_id" invisible="1"/>
                                <field name="date"/>
                                <field name="due_date" invisible="1"/>
                                <field name="original_amount" sum="original_amount"/>
                                <field name="balance_amount" sum="balance_amount"/>
                                <field name="allocation" sum="allocation"/>
                                <field name="apply_write_off" invisible="1"/>
                                <field name="woff_amount" sum="woff_amount"/>
                                <field name="woff_account"/>
                                <field name="woff_label"/>
                                <field name="diff_amt" sum="diff_amt"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>
</odoo>
