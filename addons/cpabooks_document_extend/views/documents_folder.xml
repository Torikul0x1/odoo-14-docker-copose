<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_document_field_extend" model="ir.ui.view">
        <field name="name">documents.field.extend</field>
        <field name="model">documents.folder</field>
        <field name="inherit_id" ref="documents.folder_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='tags']" position="before">
                <page name="sub_folders" string="Sub-Folders">
                    <field name="subfolders">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>