<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="crm_opportunity_partner_filter_salesperson">
        <field name="name">crm.opportunity.partner.filter.assigned.salesperson</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <filter name="assigned_to_me" position="replace">
                <filter string="My Pipeline" name="assigned_to_me"
                        domain="[('multi_salesman', '=', uid)]"
                        help="Opportunities that are assigned to me"/>
            </filter>
        </field>
    </record>
</odoo>