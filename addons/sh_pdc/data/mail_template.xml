<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- CUSTOMER / VENDOR -->
    <!-- Company to Customer Email Notification-->
    <record id="sh_pdc_company_to_customer_notification_1" model="mail.template">
        <field name="name">Due Notification From Company To Customer</field>
        <field name="model_id" ref="sh_pdc.model_pdc_wizard"/>
        <field name="use_default_to" eval="True" />
        <field name="email_from">{{ object.company_id.email }}</field>
        <field name="email_to">{{ object.partner_id.email }}</field>
        <field name="lang">{{ object.env.context.get("lang") }}</field>
        <field name="subject">Gentle Remainder</field>
        <field name="body_html" type="html">
            <div style="line-height: 28px;">
                Dear <b><t t-out="object.partner_id.name" /></b>,<br/>
                This is a gentle remainder that your cheque reference no.<b><t t-out="object.reference" /></b> due on <b><t t-out="object.due_date" /></b>.<br/>
                <div>Thank you...</div>
            </div>
        </field>
    </record>

    <!-- Company to Internal User Email Notification-->
    <record id="sh_pdc_company_to_int_user_notification_1" model="mail.template">
        <field name="name">Due Notification From Company To Internal User Customer</field>
        <field name="model_id" ref="sh_pdc.model_pdc_wizard"/>
        <field name="email_from">{{ object.company_id.email }}</field>
        <field name="lang">{{ object.env.context.get("lang") }}</field>
        <field name="subject">Gentle Remainder</field>
        <field name="body_html" type="html">
            <div style="line-height: 28px;">
                Hello,<br/>
                <b><t t-out="object.partner_id.name" /></b><b>'s</b> cheuqe reference no.<b> <t t-out="object.reference" /> </b> due on <b><t t-out="object.due_date" /> </b>.<br/>
                <a class="btn btn-primary" role="button" t-attf-href="{{ object.env.context.get('customer_url')}}">View Cheque</a><br />
                <div>Thank you...</div>
            </div>
        </field>
    </record>

    <!--    Email templates for PDC Payment Pending Approval-->
    <record id="mail_template_for_pdc_payment_approval" model="mail.template">
        <field name="name">Email for PDC Payment Approval</field>
        <field name="email_from">{{ user.email }}</field>
        <field name="subject">Approval of PDC Payment {{ object.pdc_id.name }}</field>
        <field name="email_to">{{ object.user_id.email }}</field>
        <field name="model_id" ref="model_pdc_payments_approver_user_wizard"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html">
            <![CDATA[
                </head>
                <body style="margin: 0; padding: 0;">
                <table border="0" width="100%" cellpadding="0" bgcolor="#ededed" style="padding: 20px; background-color: #ededed; border-collapse:separate;" summary="o_mail_notification">
                    <tbody>

                      <!-- HEADER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px; border-collapse:separate;">
                            <tr>
                              <td valign="middle">
                                  <span style="font-size:20px; color:white; font-weight: bold;">

                                  </span>
                              </td>
                              <td valign="middle" align="right">
                                  <img src="/logo.png?company={{object.create_uid.company_id.id}}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="{{object.create_uid.company_id.name}}">
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>

                      <!-- CONTENT -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#ffffff" style="min-width: 590px; background-color: rgb(255, 255, 255); padding: 20px; border-collapse:separate;">
                            <tbody>
                                 <td valign="top" style="font-family:Arial,Helvetica,sans-serif; color: #555; font-size: 14px;">
                                <p>Hi <t t-out="object.user_id.display_name" />,</p><br/>

                                    There is a pdc payment for your approval. Please do the needful.</p><br/>
                                    <p>Please <a t-attf-href="{{ object.pdc_id.custom_url }}" target="_blank"><b>Click Here</b></a>  to visit.</p>

                                <p>Thank you</p>
                            </tbody>
                          </table>
                        </td>
                      </tr>

                      <!-- FOOTER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px; border-collapse:separate;">
                            <tr>
                              <td valign="middle" align="left" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <t t-out="object.create_uid.company_id.name" /><br/>
                                <t t-out="object.create_uid.company_id.phone" />
                              </td>
                              <td valign="middle" align="right" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <a t-attf-href="'mailto:%s' %{{object.create_uid.company_id.email}}" style="text-decoration:none; color: white;" t-out="object.create_uid.company_id.email"/><br/>
                                    <a t-attf-href="{{object.create_uid.company_id.website}}" style="text-decoration:none; color: white;" t-out="object.create_uid.company_id.website"/>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </tbody>
                </table>
                </body>
                </html>
                ]]>
        </field>
    </record>

