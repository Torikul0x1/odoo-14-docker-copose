<?xml version="1.0" encoding="utf-8"?>
<odoo>


         <menuitem name="Payment Certificate"
            id="menu_payment_certificate_root" sequence="200" web_icon="cpabooks_payment_certificate,static/description/icon.png" />



        <record id="payment_certificate_form" model="ir.ui.view">
            <field name="name">payment.certificate.form</field>
            <field name="model">payment.certificate</field>
            <field name="arch" type="xml">
                <form string="Payment Certificate">

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_no"/>
                            <field name="Project_name"/>
                            <field name="vendor_name" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="contractor_name"/>
                            <field name="currency_id" invisible="1"/>

                        </group>
                        <group>
<!--                            <field name="contract_type"/>-->
                            <field name="date" widget="date"/>
                            <field name="contract_value"/>
<!--                            <field name="pc_no"/>-->

                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Certificate Details" name="payment_certificate">
                            <field name="payment_certificate_line"
                                widget="section_and_note_one2many">
                                <tree string="Payment Certificate Details" editable="bottom">
<!--                                    <control>-->
<!--                                        <create name="add_product_control" string="Add a product"/>-->
<!--                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>-->
<!--                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>-->
<!--                                    </control>-->
                                    <field name="product_id"/>
                                    <field name="unit"/>
                                    <field name="rate"/>
                                    <field name="previous_qty" />
                                    <field name="previous_amt" force_save="1"/>
                                    <field name="present_qty"/>
                                    <field name="present_amt" force_save="1"/>
                                    <field name="total_qty"/>
                                    <field name="total_amt"/>
                                    <field name="amount_work_done"/>
                                    <field name="remarks"/>

                                </tree>

                            </field>
                            <group class="oe_subtotal_footer oe_right" style="min-width: 50%;">
                                <field name="sub_total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
<!--                                <field name="retention_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>-->





                                <label string="Retention Amount" for="retention_amount"/>
                                 <div class="address_format">
                                     <field name="retention_percentage" nolabel="1" style="width: 25%" />%

                                     <field name="retention_amount" nolabel="1"  widget="monetary" options="{'currency_field': 'currency_id'}" style="width: 60%" class="oe_right"/>
                                </div>

<!--                                 <div class="row col-md-12">-->
<!--                                    <label string="Retention Amount" for="retention_amount" class="col-md-4"/>-->
<!--                                     <field name="retention_percentage" nolabel="1" class="oe_inline col-md-2"/>-->
<!--                                <field name="retention_amount" nolabel="1"  widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_inline col-md-2"/>-->
<!--                                </div>-->

                                <field name="previous_payment_amount"  widget="monetary" options="{'currency_field': 'currency_id'}" force_save="1"/>
                                <field name="other_deduction_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="net_payment_due_amount"/>
                                </div>
                                <field name="net_payment_due_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
<!--                            <field name="notes" class="oe_inline" placeholder="Define your terms and conditions ..."/>-->
                            <div class="oe_clear"/>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>


        <record id="payment_certificate_tree" model="ir.ui.view">
            <field name="name">payment.certificate.tree</field>
            <field name="model">payment.certificate</field>
            <field name="arch" type="xml">
                <tree string="Payment Certificate" multi_edit="1">
                    <field name="name"/>
                    <field name="project_no"/>
                    <field name="Project_name"/>
                    <field name="contractor_name"/>
<!--                    <field name="contract_type"/>-->
                    <field name="date" widget="date"/>
<!--                    <field name="pc_no"/>-->

                </tree>
            </field>
        </record>



        <record id="payment_certificate_form_action" model="ir.actions.act_window">
            <field name="name">Payment Certificate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="payment_certificate_tree"/>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Payment Certificate found. Let's create one!

              </p>
            </field>
        </record>






        <menuitem id="menu_payment_certificate_management" name="Payment Certificate"
            parent="menu_payment_certificate_root" action="payment_certificate_form_action" sequence="1" />

</odoo>
