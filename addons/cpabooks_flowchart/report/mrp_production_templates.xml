<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_mrporder" inherit_id="mrp.report_mrporder">
        <xpath expr="//div[@t-if='o.workorder_ids']" position="after">
            <div class="row oe_mt16 oe_mb16">
                <div class="col-3">
                    <strong>BOM Reference:</strong><br/>
                    <span t-field="o.bom_reference"/>
                </div>
                <div class="col-3">
                    <strong>Job Order:</strong><br/>
                    <span t-field="o.project_id"/>
                </div>
                <div class="col-3">
                    <strong>Customer:</strong><br/>
                    <span t-field="o.partner_id"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
