<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_job_order" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.job_order</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_lost']" position="after">
                <button string="New Estimation" name="button_new_estimation" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('type', '=', 'lead'), ('active', '=', False)]}"/>
            </xpath>
            <button name="action_schedule_meeting" position="after">
                <button class="oe_stat_button" type="object" name="action_view_estimation" icon="fa-pencil-square-o" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <field name="estimation_count" widget="statinfo" string="Estimations"/>
                </button>
            </button>
        </field>
    </record>

    <record id="crm_case_form_view_oppor_inherit_switchgear_custom" model="ir.ui.view">
        <field name="name">crm.lead.oppor.inherited.crm.switchgear_custom</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_new_estimation" model="ir.actions.act_window">
        <field name="name">Estimation</field>
        <field name="res_model">job.estimate</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('opportunity_id', '=', active_id)]</field>
        <field name="context">{'search_default_opportunity_id': active_id, 'default_opportunity_id': active_id}</field>
    </record>

    <!--Inherit Pipeline for List view-->
    <record id="crm.crm_lead_action_pipeline" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,graph,pivot,form,calendar,activity</field>
    </record>

    <record id="crm.crm_lead_action_pipeline_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
    </record>

    <record id="crm.crm_lead_action_pipeline_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
    </record>
</odoo>
