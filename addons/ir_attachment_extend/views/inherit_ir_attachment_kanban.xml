<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="inherit_view_document_file_kanban" model="ir.ui.view">
            <field name="name">ir.attachment kanban inherit</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="mail.view_document_file_kanban"/> <!-- Ensure this is the correct view ID -->
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_image_wrapper')]" position="replace">
                    <div class="o_kanban_image_wrapper">
                        <t t-set="webimage"
                           t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                        <div t-if="record.type.raw_value == 'url'" class="o_image o_image_thumbnail"
                             data-mimetype="application/pdf"/>
                        <img t-elif="webimage" t-attf-src="/web/image/#{record.id.raw_value}" width="100" height="100"
                             alt="Document" class="o_attachment_image"/>
                        <div t-else="!webimage" class="o_image o_image_thumbnail"
                             t-att-data-mimetype="record.mimetype.value"/>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>



