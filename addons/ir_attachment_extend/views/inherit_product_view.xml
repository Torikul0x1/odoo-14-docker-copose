<odoo>
    <data>
        <!-- Inherit the product template form view -->
        <record id="view_product_template_form_inherited" model="ir.ui.view">
            <field name="name">product.template.form.inherit.s3</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Add the new field in the General Information tab -->
                <xpath expr="//field[@name='image_1920']" position="replace">
                    <!-- Profile Image Attachment Field -->
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'cache': 'bust'}"/>
                </xpath>
            </field>
        </record>

