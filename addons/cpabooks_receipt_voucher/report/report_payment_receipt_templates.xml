<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payment_voucher_inherit" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@class='page']" position="before">
            <t t-if="o.partner_type == 'customer'">
                <h2 style="text-align:center;text-decoration: underline;margin-bottom:15px;">Receipt Voucher</h2>
            </t>
        </xpath>

        <xpath expr="//div[@class='page']" position="after">
            <div class="last-page" style="position: relative;min-height:150px;">
                <table style="border: none; position:absolute; bottom:0; left: 0; font-size:12px;">
                    <tr style="background:none; width=100%">
                        <th style="text-align:left" width="100%;">
                            <br/>
                            ...................................................................
                            <br/>
                            <strong>Receiver Name &#38; Signature</strong>
                        </th>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
