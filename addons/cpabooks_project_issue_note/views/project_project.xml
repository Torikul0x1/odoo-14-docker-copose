<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_form_inherit" model="ir.ui.view">
        <field name="name">project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                 <button class="oe_stat_button" name="project_tree_view" type="object" icon="fa-file-text-o">
                            <field string="Stock Issued" name="project_issue_count" widget="statinfo"/>
                 </button>
            </xpath>
        </field>
    </record>
</odoo>