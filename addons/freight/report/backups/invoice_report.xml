<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_freight_invoice" model="ir.actions.report">
            <field name="name">Freight invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">freight.report_freight_invoice</field>
            <field name="report_file">freight.report_freight_invoice</field>
            <!--            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>-->
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_freight_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="address">
                    <address t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"
                           id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>:
                        <span t-field="o.partner_id.vat"/>
                    </div>
                </t>
                <div class="page">
                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2"
                             t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                             name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    <table class="table table-sm o_main_table"  t-attf-style=" border-bottom: 4px double #333;padding: 10px 0;" name="invoice_line_table">
                        <tr>
                            <td colspan="4" t-attf-style="background-color: #FACA0B;color:black">
                                FREIGHT CHARGES
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <t t-esc="ports['pol'].name"/>-
                                <t t-esc="ports['pod'].name"/>
                            </td>
                        </tr>
                        <tr>
                            <td t-attf-style="background-color: #C8CCD7;">Item Description</td>
                            <td t-attf-style="background-color: #C8CCD7;">Cont.Size</td>
                            <td t-attf-style="background-color: #C8CCD7;">Cont.Type</td>
                            <td t-attf-style="background-color: #C8CCD7;">Cont.Qty</td>
                        </tr>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="line.product_id.charge_type.id==1">
                                <tr>
                                    <td>
                                        <t t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.freight_container_size"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.freight_container_type.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity"/>
                                    </td>
                                </tr>
                            </t>
                        </t>

                        <tr >
                            <td colspan="4" t-attf-style="border-bottom: 4px double #333;padding: 10px 0;background-color: #FACA0B;color:black"></td>
                        </tr>


                    <t t-foreach="containers" t-as="container">
                            <tr>
                                <td t-attf-style="background-color: #FACA0B;color:black">Container Size
                                    <t t-esc="container"/>
                                </td>
                            </tr>
                            <tr>
                                <td t-attf-style="background-color: #C8CCD7;">Item Description</td>
                                <td t-attf-style="background-color: #C8CCD7;">rate Basis</td>
                                <td t-attf-style="background-color: #C8CCD7;">Currency</td>
                                <td t-attf-style="background-color: #C8CCD7;">Cont.Qty</td>
                                <td t-attf-style="background-color: #C8CCD7;">Rate</td>
                                <td t-attf-style="background-color: #C8CCD7;">Amount
                                    <br/>
                                    Usd
                                </td>
                                <td t-attf-style="background-color: #C8CCD7;">Amount
                                    <br/>
                                    <t t-esc="billingCurrency.name"/>
                                </td>
                            </tr>
                            <t t-foreach="lines" t-as="line">
                                <t t-if="line.product_id.charge_type.id==1">
                                    <t t-if="line.freight_container_size==container">
                                        <t t-set="amtTotalUsd" t-value="0"/>
                                        <t t-set="amtTotal" t-value="0"/>
                                        <tr>
                                            <td>
                                                <t t-esc="line.product_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.rate_basis.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.foreign_currency.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.quantity"/>
                                            </td>
                                            <td>
                                                <t t-esc="'%.2f' % line.price_unit"/>
                                            </td>
                                            <td>
                                                <t t-set="amtUsd"
                                                   t-value="line.foreign_currency._convert(line.quantity * line.price_unit,USCurrency,mainCompany,o.date)"/>
                                                <t t-set="amtTotalUsd" t-value="amtTotalUsd + amtUsd"/>
                                                <t t-set="amtTotal"
                                                   t-value="amtTotal + line.quantity * line.price_unit"/>
                                                <t t-esc="'%.2f' % amtUsd"/>
                                            </td>
                                            <td>
                                                <t t-esc="'%.2f' %  USCurrency._convert(amtUsd,billingCurrency,mainCompany,o.date)"/>
                                            </td>
                                        </tr>
                                        <tr t-attf-style="border-bottom: 4px double #333;padding: 10px 0;">
                                            <td colspan="4" t-attf-style="background-color: #C8CCD7;">Total</td>
                                            <td t-attf-style="background-color: #C8CCD7;">
                                                <t t-esc="'%.2f' %  amtTotal"/>
                                            </td>
                                            <td t-attf-style="background-color: #C8CCD7;">
                                                <t t-esc="'%.2f' %  amtTotalUsd"/>
                                            </td>
                                            <td t-attf-style="background-color: #C8CCD7;">
                                                <t t-esc="'%.2f' %  USCurrency._convert(amtTotalUsd,billingCurrency,mainCompany,o.date)"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>

                    </t>

                        <tr>
                            <td colspan="10" t-attf-style="background-color: #FACA0B;color:black">Other Charges</td>
                        </tr>
                        <tr>
                            <td t-attf-style="background-color: #C8CCD7;">Item Description</td>
                            <td t-attf-style="background-color: #C8CCD7;">rate Basis</td>
                            <td t-attf-style="background-color: #C8CCD7;">Currency</td>
                            <td t-attf-style="background-color: #C8CCD7;">Cont.Qty</td>
                            <td t-attf-style="background-color: #C8CCD7;">Rate</td>
                            <td t-attf-style="text-align:center;background-color: #C8CCD7;">Amount
                                <br/>
                                USD
                            </td>
                            <td t-attf-style="text-align:center;background-color: #C8CCD7;">Amount
                                <br/>
                                <t t-esc="billingCurrency.name"/>
                            </td>
                        </tr>
                        <t t-set="otherAmtTotalUsd" t-value="0"/>
                        <t t-set="otherAmtTotal" t-value="0"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="line.product_id.charge_type.id==2">
                                <tr>
                                    <td>
                                        <t t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.rate_basis.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.foreign_currency.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity"/>
                                    </td>
                                    <td>
                                        <t t-esc="'%.2f' % line.price_unit"/>
                                    </td>
                                    <td>
                                        <t t-set="amt" t-value="line.quantity * line.price_unit"/>
                                        <t t-set="otherAmtUsd"
                                           t-value="line.foreign_currency._convert(amt,USCurrency,mainCompany,o.date)"/>
                                        <t t-set="otherAmtTotalUsd" t-value="otherAmtTotalUsd+otherAmtUsd"/>
                                        <t t-set="otherAmtTotal" t-value="otherAmtTotal+amt"/>
                                        <t t-esc="'%.2f' % otherAmtUsd"/>
                                    </td>
                                    <td>
                                        <t t-esc="'%.2f' %  line.foreign_currency._convert(amt,billingCurrency,mainCompany,o.date)"/>
                                    </td>
                                </tr>
                            </t>

                        </t>
                        <tr>
                            <td t-attf-style="background-color: #C8CCD7;">Total</td>
                            <td t-attf-style="background-color: #C8CCD7;"></td>
                            <td t-attf-style="background-color: #C8CCD7;"></td>
                            <td t-attf-style="background-color: #C8CCD7;"></td>
                            <td t-attf-style="background-color: #C8CCD7;">
                                <t t-esc="'%.2f' %  otherAmtTotal"/>
                            </td>
                            <td t-attf-style="background-color: #C8CCD7;">
                                <t t-esc="'%.2f' %  otherAmtTotalUsd"/>
                            </td>
                            <td t-attf-style="background-color: #C8CCD7;">
                                <t t-esc="'%.2f' %  USCurrency._convert(otherAmtTotalUsd,billingCurrency,mainCompany,o.date)"/>
                            </td>
                        </tr>
                    </table>

