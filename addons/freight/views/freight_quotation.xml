<record model="ir.ui.view" id="view_freight_quotation_form">
            <field name="name">freight.quotation.form</field>
            <field name="model">freight.quotation</field>
            <field name="arch" type="xml">
                <form string="Operations">
                    <sheet>
                        <h1><div><field name="name" string="Quotation No." readonly="1"/></div></h1>
                        <group string="Operation">
                            <group>
                                <field name="operation" invisible="1"/>
                                <field name="direction" widget="radio" />
                            </group>
                            <group>
                                <field name="transport" widget="radio"/>
                                <field name="ocean_shipment_type" widget="radio" attrs="{'invisible': [('transport','!=','ocean')]}"/>
                                <field name="inland_shipment_type" widget="radio" attrs="{'invisible': [('transport','!=','land')]}"/>
                            </group>
                        </group>
                    </sheet>
              </form>
            </field>
        </record>



