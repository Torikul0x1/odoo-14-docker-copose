<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_shop_authorized_users_rule" model="ir.rule">
        <field name="name">POS Authorized Users Shop</field>
        <field name="model_id" ref="model_pos_config"/>
        <field name="domain_force">[('user_ids', 'in', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="pos_shop_authorized_users_rule_admin" model="ir.rule">
        <field name="name">POS Authorized Users Shop (Admin)</field>
        <field name="model_id" ref="model_pos_config"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>