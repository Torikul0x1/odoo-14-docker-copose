<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_payment_form_inherited" model="ir.ui.view">
			<field name="name">account.payment.form.inherit</field>
			<field name="model">account.payment.register</field>
			<field name="inherit_id" ref="account.view_account_payment_register_form" />
			<field name="arch" type="xml">
<!--                <field name="partner_bank_id" position="replace">-->
<!--&lt;!&ndash;					<attribute name="attrs">{'invisible': [True]}</attribute>&ndash;&gt;-->
<!--				</field>-->
				<field name="payment_method_id" position="attributes">
					<attribute name="attrs">{'invisible': [True]}</attribute>
				</field>
				<field name="journal_id" position="after">
<!--					<field name="is_chq_no_hide" invisible="1"/>-->
					<field name="custom_partial_amount" invisible="1"/>
					<field name="cheque_no" />
					<field name="cheque_date" />
				</field>
<!--				<field name="payment_date" position="replace">-->
<!--					<field name="payment_date" string="Cheque Deposite Date"/>-->
<!--				</field>-->
			</field>
		</record>


		<record id="view_account_payment_form_inherited" model="ir.ui.view">
			<field name="name">account.payment.form.inherit</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form" />
			<field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[@name='group3']/field[@name='date']" position="after">
<!--                <xpath expr="//form/sheet/group/group/field[@name=' date']" position="after">-->

						<field name="cheque_no"/>
						<field name="cheque_date"/>
						<field name="num_word" invisible="1"/>

				</xpath>
			</field>
		</record>

		<record id="view_account_payment_tree_inherited" model="ir.ui.view">
			<field name="name">account.payment.tree.inherit</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_tree" />
			<field name="arch" type="xml">
                <xpath expr="/tree/field[@name='journal_id']" position="after">

						<field name="cheque_no"/>
						<field name="cheque_date" invisible="1"/>

				</xpath>
			</field>
		</record>
    </data>
</odoo>