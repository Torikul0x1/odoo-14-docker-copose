<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_form_inherited" model="ir.ui.view">
			<field name="name">account.move.form.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
                <field name="partner_bank_id" position="replace">

                </field>
                <field name="payment_reference" position="after">
					<field name="invoice_origin" string="Quotation No."/>
				</field>
				<xpath expr="//div[@name='button_box']" position="inside">

                <button type="object" name="action_view_relavent_payment"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        string="Payments"
                        attrs="{'invisible':['|',('state', '!=', 'posted'),('payment_count','=',0)]}"
                >
                    <field name="payment_count"/>

                </button>
            </xpath>

			</field>
		</record>
    </data>
</odoo>