<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="inventory_valuation_report_qty_document">
            <t t-call="web.external_layout">
                <div class="page">
                    <br/>
                    <style>
                        #table_css {
                            border: 1px solid black
                            border-collapse: collapse;
                            border-spacing : 0px;
                            border-top-spacing : 0px;
                        }
                        #table_css td, #table_css th {
                            border: 1px solid black
                        }
                        #table_css tr: {
                            border: 1px solid black
                        }
                        #table_css th {
                            style="border: 1px solid black"
                        }
                    </style>
                    <t t-foreach="docs.warehouse_ids" t-as="warehouse">
                        <t t-if="docs.location_ids">
                            <t t-set="location_ids" t-value="get_warehouse_wise_location(docs,warehouse)"/>
                        </t>
                        <div class="row">
                            <div style="width:100%;font-size:18px;font-weight:bold;text-align:center;">
                                Inventory Valuation Report
                            </div>
                        </div>
                        <div class="row">
                            <span style="font-size:16px;text-align:left;padding-left:15px;">
                                Date:
                                <span t-esc="docs.start_date.strftime('%d-%m-%Y')"/>
                                To
                                <span t-esc="docs.end_date.strftime('%d-%m-%Y')"/>
                            </span>
                            <span style="font-size:16px;text-align:right;padding-left:710px;">
                                Warehouse: <span t-esc="warehouse.name"/>
                            </span>
                        </div>

                        <table class="table table-sm" id="table_css">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th t-if="docs.location_ids">Location</th>
                                    <th colspan="2" class="text-center">Beginning</th>
                                    <th colspan="2" class="text-center">Inbound</th>
                                    <th colspan="2" class="text-center">Outbound</th>
                                    <th colspan="2" class="text-center">Internal</th>
                                    <th colspan="2" class="text-center">Adjustment</th>
                                    <th colspan="2" class="text-center">Ending</th>
                                </tr>
                                <tr>
                                    <th/>

                                    <th t-if="docs.location_ids"></th>
                                    <th colspan="2">Qty</th>

                                    <th colspan="2">Qty</th>

                                    <th colspan="2">Qty</th>

                                    <th colspan="2">Qty</th>

                                    <th colspan="2">Qty</th>

                                    <th colspan="2">Qty</th>

                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t colspan="2" t-set="sum_begning" t-value="0.0"/>

                                <t colspan="2" t-set="sum_product_qty_in" t-value="0.0"/>

                                <t colspan="2" t-set="sum_product_qty_out" t-value="0.0"/>

                                <t colspan="2" t-set="sum_product_qty_internal" t-value="0.0"/>

                                <t colspan="2" t-set="sum_product_qty_adjustment" t-value="0.0"/>

                                <t colspan="2" t-set="sum_ending_qty_value" t-value="0.0"/>

                                <t t-if="not docs.group_by_categ">
                                    <t t-if="docs.location_ids">
                                        <t colspan="2" t-set="product_sum_begning" t-value="0.0"/>

                                        <t colspan="2" t-set="product_sum_product_qty_in" t-value="0.0"/>

                                        <t colspan="2" t-set="product_sum_product_qty_out" t-value="0.0"/>

                                        <t colspan="2" t-set="product_sum_product_qty_internal" t-value="0.0"/>

                                        <t colspan="2" t-set="product_sum_product_qty_adjustment" t-value="0.0"/>

                                        <t colspan="2" t-set="product_sum_product_qty_ending" t-value="0.0"/>

                                        <t t-foreach="get_products(docs)" t-as="product">
                                            <span t-set="location_data" t-value="get_location_wise_product(docs,warehouse,product,location_ids)"/>
                                            <tr>
                                                <td><span t-esc="product.display_name"/></td>

                                                <td/>
                                                <td colspan="2" style="font-weight:bold;">
                                                    <t t-if="location_data[1][0] == 0">-</t>
                                                    <t t-else=""><span t-esc="location_data[1][0]"/></t>
                                                </td>

                                                <td colspan="2" style="font-weight:bold;">

                                                    <t t-if="location_data[1][1] == 0">-</t>
                                                    <t t-else=""><span t-esc="location_data[1][1]"/></t>
                                                </td>

                                                <td colspan="2" style="font-weight:bold;">

                                                    <t t-if="abs(location_data[1][2]) == 0">-</t>
                                                    <t t-else=""><span t-esc="abs(location_data[1][2])"/></t>
                                                </td>

                                                <td colspan="2" style="font-weight:bold;">

                                                    <t t-if="location_data[1][3] == 0">-</t>
                                                    <t t-else=""><span t-esc="location_data[1][3]"/></t>
                                                </td>

                                                <td colspan="2" style="font-weight:bold;">
                                                    <t t-if="location_data[1][4] == 0">-</t>
                                                    <t t-else=""><span t-esc="location_data[1][4]"/></t>
                                                </td>

                                                <td colspan="2" style="font-weight:bold;">
                                                    <t t-if="location_data[1][5] == 0">-</t>
                                                    <t t-else=""><span t-esc="location_data[1][5]"/></t>
                                                </td>

                                            </tr>
                                            <tr t-foreach="location_data[0]" t-as="l">
                                                <td></td>

                                                <td>
                                                    <span t-esc="l.display_name"/>
                                                </td>
                                                <td colspan="2">

                                                    <t t-if="l_value[0] == 0">-</t>
                                                    <t t-else=""><span t-esc="l_value[0]"/></t>
                                                    <t t-set="product_sum_begning" t-value="product_sum_begning + l_value[0]"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="l_value[1] == 0">-</t>
                                                    <t t-else=""><span t-esc="l_value[1]"/></t>
                                                    <t t-set="product_sum_product_qty_in" t-value="product_sum_product_qty_in + l_value[1]"/>
                                                </td>

                                                <td colspan="2">

                                                    <t t-if="abs(l_value[2]) == 0">-</t>
                                                    <t t-else=""><span t-esc="abs(l_value[2])"/></t>
                                                    <t t-set="product_sum_product_qty_out" t-value="product_sum_product_qty_out + l_value[2]"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="l_value[3] == 0">-</t>
                                                    <t t-else=""><span t-esc="l_value[3]"/></t>
                                                    <t t-set="product_sum_product_qty_internal" t-value="product_sum_product_qty_internal + l_value[3]"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="l_value[4] == 0">-</t>
                                                    <t t-else=""><span t-esc="l_value[4]"/></t>
                                                    <t t-set="product_sum_product_qty_adjustment" t-value="product_sum_product_qty_adjustment + l_value[4]"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="l_value[5] == 0">-</t>
                                                    <t t-else=""><span t-esc="l_value[5]"/></t>
                                                    <t t-set="product_sum_product_qty_ending" t-value="product_sum_product_qty_ending + l_value[5]"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <th style="border-top: 2px solid black">Total</th>
                                            <th style="border-top: 2px solid black"></th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="product_sum_begning == 0">-</t>
                                                <t t-else=""><span t-esc="product_sum_begning"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">

                                                <t t-if="product_sum_product_qty_in == 0">-</t>
                                                <t t-else=""><span t-esc="product_sum_product_qty_in"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">

                                                <t t-if="abs(product_sum_product_qty_out) == 0">-</t>
                                                <t t-else=""><span t-esc="abs(product_sum_product_qty_out)"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="product_sum_product_qty_internal == 0">-</t>
                                                <t t-else=""><span t-esc="product_sum_product_qty_internal"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="product_sum_product_qty_adjustment == 0">-</t>
                                                <t t-else=""><span t-esc="product_sum_product_qty_adjustment"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="product_sum_product_qty_ending == 0">-</t>
                                                <t t-else=""><span t-esc="product_sum_product_qty_ending"/></t>
                                            </th>
                                        </tr>
                                    </t>

                                    <t t-if="not docs.location_ids">
                                        <t t-foreach="get_products(docs)" t-as="product">
                                            <t t-value="get_beginning_inventory(docs,product,warehouse)" t-set="product_beg_qty"/>
                                            <t t-value="get_product_sale_qty(docs,warehouse,product)" t-set="product_val"/>
                                            <t t-set="ending_qty"
                                            t-value="product_beg_qty + product_val['product_qty_in'] + product_val['product_qty_out'] +
                                                        product_val['product_qty_internal'] + product_val['product_qty_adjustment']"/>
                                            <tr>
                                                <td><span t-esc="product.display_name"/></td>

                                                <td colspan="2">
                                                    <t t-if="product_beg_qty == 0">-</t>
                                                    <t t-else=""><span t-esc="product_beg_qty"/></t>
                                                    <t t-set="sum_begning" t-value="sum_begning + product_beg_qty"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="product_val['product_qty_in'] == 0">-</t>
                                                    <t t-else=""><span t-esc="product_val['product_qty_in']"/></t>
                                                    <t t-set="sum_product_qty_in" t-value="sum_product_qty_in + product_val['product_qty_in']"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="abs(product_val['product_qty_out']) == 0">-</t>
                                                    <t t-else=""><span t-esc="abs(product_val['product_qty_out'])"/></t>
                                                    <t t-set="sum_product_qty_out" t-value="sum_product_qty_out + product_val['product_qty_out']"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="product_val['product_qty_internal'] == 0">-</t>
                                                    <t t-else=""><span t-esc="product_val['product_qty_internal']"/></t>
                                                    <t t-set="sum_product_qty_internal" t-value="sum_product_qty_internal + product_val['product_qty_internal']"/>
                                                </td>

                                                <td colspan="2">
                                                    <t t-if="product_val['product_qty_adjustment'] == 0">-</t>
                                                    <t t-else=""><span t-esc="product_val['product_qty_adjustment']"/></t>
                                                    <t t-set="sum_product_qty_adjustment" t-value="sum_product_qty_adjustment + product_val['product_qty_adjustment']"/>
                                                </td>

                                                <td colspan="2">

                                                    <t t-if="product_beg_qty + product_val['product_qty_in'] +
                                                            product_val['product_qty_out'] + product_val['product_qty_internal'] +
                                                            product_val['product_qty_adjustment'] == 0">-</t>
                                                    <t t-else=""><span t-esc="product_beg_qty + product_val['product_qty_in'] +
                                                            product_val['product_qty_out'] + product_val['product_qty_internal'] +
                                                            product_val['product_qty_adjustment']"/></t>
                                                </td>

                                            </tr>
                                        </t>
                                        <tr>
                                            <th style="border-top: 2px solid black">Total</th>

                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="sum_begning == 0">-</t>
                                                <t t-else=""><span t-esc="sum_begning"/></t>

                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">

                                                <t t-if="sum_product_qty_in == 0">-</t>
                                                <t t-else=""><span t-esc="sum_product_qty_in"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">

                                                <t t-if="abs(sum_product_qty_out) == 0">-</t>
                                                <t t-else=""><span t-esc="abs(sum_product_qty_out)"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="sum_product_qty_internal == 0">-</t>
                                                <t t-else=""><span t-esc="sum_product_qty_internal"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-if="sum_product_qty_adjustment == 0">-</t>
                                                <t t-else=""><span t-esc="sum_product_qty_adjustment"/></t>
                                            </th>
                                            <th colspan="2" style="border-top: 2px solid black">
                                                <t t-set="sum_ending_qty" t-value="sum_begning + sum_product_qty_in + sum_product_qty_out + sum_product_qty_internal
                                                            + sum_product_qty_adjustment"/>
                                                <t t-if="sum_ending_qty == 0">-</t>
                                                <t t-else=""><span t-esc="sum_ending_qty"/></t>
                                            </th>
                                        </tr>
                                    </t>
                                </t>

                                <t t-if="docs.group_by_categ">
                                    <t t-value="get_product_sale_qty(docs,warehouse,product=None)" t-set="product_val"/>
                                    <t t-foreach="product_val" t-as="product_categ">
                                        <t colspan="2" t-set="sum_categ_begning" t-value="0.0"/>
                                        <t colspan="2" t-set="sum_categ_product_qty_in" t-value="0.0"/>
                                        <t colspan="2" t-set="sum_categ_product_qty_out" t-value="0.0"/>
                                        <t colspan="2" t-set="sum_categ_product_qty_internal" t-value="0.0"/>
                                        <t colspan="2" t-set="sum_categ_product_qty_adjustment" t-value="0.0"/>
                                        <t colspan="2" t-set="sum_categ_ending" t-value="0.0"/>
                                        <span t-set="product_categ_id" t-value="request.env['product.category'].browse(product_categ)"/>
                                        <tr style="background-color:darkgrey;">
                                            <td><span t-esc="product_categ_id.name"/></td>
                                            <td colspan="12"/>
                                            <td t-if="docs.location_ids"></td>
                                        </tr>
                                        <t t-foreach="product_categ_value" t-as="product_categ_data">
                                            <t t-set="product_id" t-value="product_categ_data['product_id']"/>
                                            <t t-value="get_beginning_inventory(docs,product_id,warehouse)" t-set="product_beg_qty"/>
                                            <span t-set="total_ending" t-value=" product_beg_qty + product_categ_data['product_qty_in'] +
                                                product_categ_data['product_qty_out'] + product_categ_data['product_qty_internal'] +
                                                product_categ_data['product_qty_adjustment']"/>
                                            <span t-set="product_id" t-value="request.env['product.product'].browse(product_id)"/>

                                            <t t-if="docs.location_ids">
                                                <span t-set="location_data" t-value="get_location_wise_product(docs,warehouse,product_id,location_ids,product_categ_id)"/>
                                                <t colspan="2" t-set="product_sum_begning" t-value="0.0"/>
                                                <t colspan="2" t-set="product_sum_product_qty_in" t-value="0.0"/>
                                                <t colspan="2" t-set="product_sum_product_qty_out" t-value="0.0"/>
                                                <t colspan="2" t-set="product_sum_product_qty_internal" t-value="0.0"/>
                                                <t colspan="2" t-set="product_sum_product_qty_adjustment" t-value="0.0"/>
                                                <tr>
                                                    <td>
                                                        <span t-esc="product_id.display_name"/>
                                                    </td>
                                                    <td></td>
                                                    <td colspan="2" style="font-weight:bold;">
                                                        <t t-if="location_data[1][0] == 0">-</t>
                                                        <t t-else=""><span t-esc="location_data[1][0]"/></t>
                                                    </td>
                                                    <td colspan="2" style="font-weight:bold;">
                                                        <t t-if="location_data[1][1] == 0">-</t>
                                                        <t t-else=""><span t-esc="location_data[1][1]"/></t>
                                                    </td>
                                                    <td colspan="2" style="font-weight:bold;">

                                                        <t t-if="abs(location_data[1][2]) == 0">-</t>
                                                        <t t-else=""><span t-esc="abs(location_data[1][2])"/></t>
                                                    </td>

                                                    <td colspan="2" style="font-weight:bold;">

                                                        <t t-if="location_data[1][3] == 0">-</t>
                                                        <t t-else=""><span t-esc="location_data[1][3]"/></t>
                                                    </td>
                                                    <td colspan="2" style="font-weight:bold;">
                                                        <t t-if="location_data[1][4] == 0">-</t>
                                                        <t t-else=""><span t-esc="location_data[1][4]"/></t>
                                                    </td>
                                                    <td colspan="2" style="font-weight:bold;">
                                                        <t t-if="location_data[1][5] == 0">-</t>
                                                        <t t-else=""><span t-esc="location_data[1][5]"/></t>
                                                    </td>
                                                </tr>
                                                <tr t-foreach="location_data[0]" t-as="l">
                                                    <td></td>
                                                    <td>
                                                        <span t-esc="l.display_name"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="l_value[0] == 0">-</t>
                                                        <t t-else=""><span t-esc="l_value[0]"/></t>
                                                        <t t-set="sum_categ_begning" t-value="sum_categ_begning + l_value[0]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="l_value[1] == 0">-</t>
                                                        <t t-else=""><span t-esc="l_value[1]"/></t>
                                                        <t t-set="sum_categ_product_qty_in" t-value="sum_categ_product_qty_in + l_value[1]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="abs(l_value[2]) == 0">-</t>
                                                        <t t-else=""><span t-esc="abs(l_value[2])"/></t>
                                                        <t t-set="sum_categ_product_qty_out" t-value="sum_categ_product_qty_out + l_value[2]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="l_value[3] == 0">-</t>
                                                        <t t-else=""><span t-esc="l_value[3]"/></t>
                                                        <t t-set="sum_categ_product_qty_internal" t-value="sum_categ_product_qty_internal + l_value[3]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="l_value[4] == 0">-</t>
                                                        <t t-else=""><span t-esc="l_value[4]"/></t>
                                                        <t t-set="sum_categ_product_qty_adjustment" t-value="sum_categ_product_qty_adjustment + l_value[4]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <t t-if="l_value[5] == 0">-</t>
                                                        <t t-else=""><span t-esc="l_value[5]"/></t>
                                                    </td>

                                                </tr>
                                            </t>
                                            <t t-if="not docs.location_ids">
                                                <tr>
                                                    <td>
                                                        <span t-esc="product_id.display_name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="dict(product_categ_id.fields_get()['property_cost_method']['selection'])[product_categ_id.property_cost_method]"/>
                                                    </td>
                                                    <td colspan="2">
                                                        <span t-esc="product_beg_qty"/>
                                                        <t t-set="sum_begning" t-value="sum_begning + product_beg_qty"/>
                                                        <t t-set="sum_categ_begning" t-value="sum_categ_begning + product_beg_qty"/>
                                                    </td>

                                                    <td colspan="2">
                                                        <span t-esc="product_categ_data['product_qty_in']"/>
                                                        <t t-set="sum_product_qty_in" t-value="sum_product_qty_in + product_categ_data['product_qty_in']"/>
                                                        <t t-set="sum_categ_product_qty_in" t-value="sum_categ_product_qty_in + product_categ_data['product_qty_in']"/>
                                                    </td>

                                                    <td colspan="2">
                                                        <span t-esc="abs(product_categ_data['product_qty_out'])"/>
                                                        <t t-set="sum_product_qty_out" t-value="sum_product_qty_out + product_categ_data['product_qty_out']"/>
                                                        <t t-set="sum_categ_product_qty_out" t-value="sum_categ_product_qty_out + product_categ_data['product_qty_out']"/>
                                                    </td>

                                                    <td colspan="2">
                                                        <span t-esc="product_categ_data['product_qty_internal']"/>
                                                        <t t-set="sum_product_qty_internal" t-value="sum_product_qty_internal + product_categ_data['product_qty_internal']"/>
                                                        <t t-set="sum_categ_product_qty_internal" t-value="sum_categ_product_qty_internal + product_categ_data['product_qty_internal']"/>
                                                    </td>

                                                    <td colspan="2">
                                                        <span t-esc="product_categ_data['product_qty_adjustment']"/>
                                                        <t t-set="sum_product_qty_adjustment" t-value="sum_product_qty_adjustment + product_categ_data['product_qty_adjustment']"/>
                                                        <t t-set="sum_categ_product_qty_adjustment" t-value="sum_categ_product_qty_adjustment + product_categ_data['product_qty_adjustment']"/>
                                                    </td>

                                                    <td colspan="2">
                                                        <span t-esc="product_beg_qty + product_categ_data['product_qty_in'] +
                                                                    product_categ_data['product_qty_out'] +
                                                                    product_categ_data['product_qty_internal'] +
                                                                    product_categ_data['product_qty_adjustment']"/>
                                                    </td>

                                                </tr>
                                            </t>
                                        </t>
                                        <tr>
                                            <th class="text-center">Total</th>

                                            <th t-if="docs.location_ids"></th>
                                            <th colspan="2">
                                                <t t-if="sum_categ_begning == 0">-</t>
                                                <t t-else=""><span t-esc="sum_categ_begning"/></t>
                                            </th>
                                            <th colspan="2">
                                                <t t-if="sum_categ_product_qty_in == 0">-</t>
                                                <t t-else=""><span t-esc="sum_categ_product_qty_in"/></t>
                                            </th>
                                            <th colspan="2">
                                                <t t-if="abs(sum_categ_product_qty_out) == 0">-</t>
                                                <t t-else=""><span t-esc="abs(sum_categ_product_qty_out)"/></t>
                                            </th>
                                            <th colspan="2">
