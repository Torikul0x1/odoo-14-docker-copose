<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Signature bottom of quotation sale order pdf report -->
        <template id="signature_sale_order_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@name='signature']" position="after">
                 <div class="last-page" style="position: relative; min-height: 150px;">
                      <table style="border: none; position:absolute; bottom:0; left: 0; font-size:12px;">
                          <tr>
                              <th style="line-height: 1.6;" width="100%">
                                <br/>
                                ...................................................................
                                <br/>
                                 For, <strong t-field="doc.company_id.name"> </strong>
                              </th>
                              <th style="text-align:right" width="100%">
                                  <br/>
                                  ...................................................................
                                  <br/>
                                  <strong>Receiver Name &#38; Signature </strong>
                              </th>
                          </tr>
                      </table>
                  </div>
            </xpath>
        </template>

          <!-- Serial No. quotation sale order pdf report -->
        <template id="serial_no_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t/div[hasclass('page')]/table/thead/tr/th[1]" position="before">
                <th name="th_line_no" class="text-center">Sl No.</th>
            </xpath>
            <xpath expr="//t/div[hasclass('page')]/table/tbody/t/tr/t/td[1]" position="before">
                <td name="td_line_no" class="text-center"><span t-field="line.line_no"/></td>
            </xpath>
        </template>


