<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_cpabooks_sales" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.cpabooks_sales</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="image_128" widget="image" class="oe_avatar" options="{'size': [48, 48]}"/>
            </xpath>
        </field>
    </record>
</odoo>
