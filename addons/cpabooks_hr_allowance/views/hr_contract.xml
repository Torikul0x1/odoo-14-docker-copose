<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_extend" model="ir.ui.view">
        <field name="name">hr.contract.extend.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract_salary.hr_contract_view_form"/>
        <!--        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>-->
        <field name="arch" type="xml">

            <xpath expr="//group[@name='main_info']/group[2]" position="attributes">

                <attribute name="style">display: none;</attribute>
            </xpath>


        </field>
    </record>
    <record id="hr_contract_view_form_cpabooks_allowance" model="ir.ui.view">
        <field name="name">HR Contract cpabooks allowance</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']/group[@name='main_info']/group[@name='yearly_advantages']"
                   position="attributes">

                <attribute name="style">display: none;</attribute>
            </xpath>

            <!--            <xpath expr="//group[@name='salary_and_advantages']/div[2]" position="attributes">-->

            <!--                    <attribute name="style">display: none;</attribute>-->
            <!--            </xpath>-->

            <xpath expr="//group[@name='salary_and_advantages']" position="after">
                <group name="employee_allowance">
                    <label for="food_allowance"/>
                    <div class="o_row">
                        <field name="food_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>

                    <label for="vehicle_allowance"/>
                    <div class="o_row">
                        <field name="vehicle_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>

                    <label for="telephone_allowance"/>
                    <div class="o_row">
                        <field name="telephone_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="other_allowance"/>
                    <div class="o_row">
                        <field name="other_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="house_rent"/>
                    <div class="o_row">
                        <field name="house_rent" nolabel="1"/>
                        <span>/ month</span>
                    </div>

                    <label for="monthly_yearly_costs"/>
                    <div class="o_row">
                        <field name="monthly_yearly_costs" nolabel="1"/>
                        <span>/ month</span>
                    </div>

                    <label for="final_yearly_costs"/>
                    <div class="o_row">
                        <field name="final_yearly_costs" nolabel="1"/>
                        <span>/ year</span>
                    </div>
                </group>

            </xpath>


            <!--            <xpath expr="//field[@name='wage']/.." position="after">-->
            <!--                <group name="not_hot_wps">-->
            <!--                <label for="wps_salary"/>-->
            <!--                <div class="o_row">-->
            <!--                    <field name="wps_salary" nolabel="1"/>-->
            <!--                    <span>/ month</span>-->
            <!--                </div>-->
            <!--                <field name="not_rate"/>-->
            <!--                <field name="hot_rate"/>-->
            <!--                </group>-->
            <!--                <group>-->

            <!--                </group>-->
            <!--            </xpath>-->
        </field>
    </record>

    <record id="hr_contract_view_form_inherit10_extend" model="ir.ui.view">
        <field name="name">HR Contract Inherit 1</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="bi_hr_payroll_timesheet.hr_contract_view_form_inherit10"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='salary_per_h']" position="before">
                <field name="is_on_gross_sph"/>
            </xpath>
            <field name="salary_per_h" position="after">
                <label for="not_rate"/>
                <div class="o_row">
                    <field name="not_rate" nolabel="1" force-save="1"/>
                    <!--                    <span>/ month</span>-->
                </div>
                <label for="hot_rate"/>
                <div class="o_row">
                    <field name="hot_rate" nolabel="1"/>
                    <!--                    <span>/ month</span>-->
                </div>


                <label for="not_per_hour"/>
                <div class="o_row">
                    <field name="not_per_hour" nolabel="1"/>
                    <!--                    <span>/ month</span>-->
                </div>
                <label for="hot_per_hour"/>
                <div class="o_row">
                    <field name="hot_per_hour" nolabel="1"/>
                    <!--                    <span>/ month</span>-->
                </div>
                <label for="wps_salary"/>
                <div class="o_row">
                    <field name="wps_salary" nolabel="1"/>
                    <span>/ month</span>
                </div>


            </field>
        </field>
    </record>
</odoo>
