<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_report" inherit_id="account.report_invoice_document" name="Invoice Report">
      <xpath expr="//th[@name='th_taxes']" position="replace">
        <th name="th_taxes" style="width: 100px;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>VAT 5%</span></th>
      </xpath>
      <xpath expr="//th[@name='th_quantity']" position="replace">
          <th name="th_quantity" class="text-right"><span>Qty</span></th>
        </xpath>
      <xpath expr="//th[@name='th_taxes']" position="before">
            <th name="th_taxable_amount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span>Total Amount Exclusive Vat</span>
            </th>
        </xpath>
        <xpath expr="//th[@name='th_subtotal']" position="replace">
          <th name="th_subtotal" class="text-right">
              <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
              <span groups="account.group_show_line_subtotals_tax_included">Total Amount Inclusive Vat</span>
          </th>
        </xpath>
         <xpath expr="//th[@name='th_taxes']" position="after">
            <th name="th_taxed_amount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span>VAT Amount</span>
            </th>
        </xpath>
        <xpath expr="//td[contains(@t-attf-class, 'text-cente')]" position="before">
            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
               	<span t-esc="'{0:,.2f}'.format(line.price_subtotal)"/>
            </td>
        </xpath>
        <xpath expr="//td[contains(@class, 'o_price_total')]" position="before">
            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
               	<t t-set="taxed_amount" t-value="'{0:,.2f}'.format(line.price_total-line.price_subtotal)" />
               	<span t-esc="taxed_amount"/>
            </td>
        </xpath>
    </template>
</odoo>

