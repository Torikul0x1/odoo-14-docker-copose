<odoo>

    <record id="restrict_menu_company" model="ir.rule">
        <field name="name">Restrict Menu from Company</field>
        <field ref="model_ir_ui_menu" name="model_id"/>
        <field name="domain_force">[('restrict_company_ids','not in',user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_read" eval="True"/>
    </record>

    <record model="ir.rule" id="restrict_menu_system_rule">
        <field name="name">Restrict Menu from Company (Super)</field>
        <field name="model_id" ref="model_ir_ui_menu"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
    </record>

</odoo>