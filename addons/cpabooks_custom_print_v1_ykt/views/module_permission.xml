<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="module_permission_form" model="ir.ui.view">
            <field name="name">success.message.wizard.form</field>
            <field name="model">crm.success.message.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="message" readonly="True"/>
                    <footer>
                        <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="module_permission_form" model="ir.ui.view">
            <field name="name">module_permission.form</field>
            <field name="model">module.permission</field>
            <field name="arch" type="xml">
                <form string="CRM Permission"  create="false" edit="false">

                <sheet>

                    <group>
                        <group>

                            <field name="company_id"/>

                        </group>
                        <group>
                            <field name="permission"/>

                        </group>

                    </group>


                </sheet>
                <footer>
                    <button type="object" name="action_permit" string="Submit"/>
                </footer>
                </form>
            </field>
        </record>




        <record id="module_permission_action" model="ir.actions.act_window">
            <field name="name">CRM Permission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">module.permission</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>





    <menuitem id="menu_module_permission" name="CRM Permission"
            parent="base.menu_users" action="module_permission_action" sequence="10" groups="base.group_system"/>

</odoo>
