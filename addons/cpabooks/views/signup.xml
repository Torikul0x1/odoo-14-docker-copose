<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="company_signup" name="Signup">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">

                    <div class="container" style="margin-top:20px; margin-bottom:20px">
                        <div class="row">
                            <div class="col-lg-6 offset-lg-2">


                                <h5>Signup for your company, today!</h5>
                                <form role="form" action="/create/partner/" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    
                                    <div class="form-group">
                                        <label for="name" class="control-label">Your Name</label>
                                        <input type="text" name="name" t-att-value="name" id="name"
                                               class="form-control" placeholder="Your Name" required="required"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="phone" class="control-label">Your Phone</label>
                                        <input type="tel" name="phone" t-att-value="phone"
                                               id="phone"
                                               class="form-control" placeholder="Your Phone Number"
                                               required="required"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="email" class="control-label">Your Email</label>
                                        <input type="email" name="email" t-att-value="email"
                                               id="email"
                                               class="form-control" placeholder="Your Email" required="required"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="password" class="control-label">Password</label>
                                        <input type="password" name="password" t-att-value="password"
                                               id="password"
                                               class="form-control" placeholder="Password" required="required"/>
                                    </div>


                                    <div class="form-group">
                                        <label for="company" class="control-label">Company Name</label>
                                        <input type="text" name="company" t-att-value="company"
                                               id="company"
                                               class="form-control" placeholder="Company Name" required="required"/>
                                    </div>

                                    <div class="clearfix">
                                        <button type="submit" class="btn btn-primary pull-left">Signup</button>

                                    </div>

                                </form>

                            </div>

                        </div>


                    </div>

                </div>
            </div>


        </t>
    </template>
</odoo>