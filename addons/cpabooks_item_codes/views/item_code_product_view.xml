<odoo>
    <data>
        <record model="ir.ui.view" id="item_code_product_form_inherit">
            <field name="name">product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="string">Part Number</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="item_code" string="Item Code"/>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="item_code_product_template_tree_inherit">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="item_code" string="Item Code"/>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="item_code_product_tree_inherit">
            <field name="name">product.template.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="item_code" string="Item Code"/>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="item_code_product_search_inherit">
            <field name="name">product.template.search.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//search/field[@name='name']" position="after">

                    <field name="item_code" string="Item Code"/>


                </xpath>
                <xpath expr="//search" position="inside">
                    <filter string="Item Code" name="item_code"/>

                    <field name="default_code" string="Part Number" />
                </xpath>
            </field>
        </record>




