        <record id="hr_rule_hot_salary_II" model="hr.salary.rule">
            <field name="name">HOT Salary</field>
            <field name="sequence" eval="1"/>
            <field name="code">HOTSAL</field>
            <field name="category_id" ref="cpabooks_payroll_automation.HOTSAL"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="struct_id" ref="cpabooks_payroll_automation.structure_hourly_pay_on_basic"/>
<!--            <field name="amount_python_compute">result = employee.get_hot_overtime(employee.id, payslip.date_from,-->
<!--                payslip.date_to)*1.50-->
<!--            </field> -->
            <field name="amount_python_compute">result = employee.get_hot_overtime(employee.id, payslip.date_from, payslip.date_to)*payslip.contract_id.hot_rate*contract.salary_per_h
            </field>
        </record>

