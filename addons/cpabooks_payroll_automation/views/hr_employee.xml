<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_employee_inherit" model="ir.ui.view">
        <field name="name">view.hr.employee.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_contract" string="Create Contract" type="object" groups="hr.group_hr_manager" class="btn btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>